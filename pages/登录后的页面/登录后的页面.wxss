/* 登录后页面美化样式 */
.logged-in-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff9f0 0%, #fff5e6 100%);
  padding: 0 0 140rpx 0; /* 底部留出tabBar空间 */
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰区域 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 209, 80, 0.05) 100%);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 50rpx;
}

/* 右上角按钮 */
.top-right-button {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  z-index: 10;
}

.button-group {
  display: flex;
  gap: 16rpx;
}

.button-item {
  width: 80rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.button-icon {
  font-size: 32rpx;
  color: #b8860b;
  font-weight: bold;
}

/* 页面头部 */
.header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx 40rpx;
  position: relative;
  z-index: 2;
}

.header-icon {
  margin-bottom: 30rpx;
}

.icon-container {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.icon-text {
  font-size: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: block;
}

/* 主要内容区域 */
.logged-in-content {
  padding: 80rpx 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

/* 欢迎信息区域 */
.welcome-section {
  margin-bottom: 40rpx;
}

.welcome-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.welcome-icon {
  margin-bottom: 10rpx;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 8rpx;
  display: block;
}

.welcome-subtext {
  font-size: 22rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

/* 区域标题 */
.section-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 4rpx;
  display: block;
}

.section-subtitle {
  font-size: 20rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

/* 用户信息区域 */
.user-info-section {
  margin-bottom: 40rpx;
}

.user-info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.user-avatar {
  text-align: center;
  margin-bottom: 24rpx;
}

.avatar-circle {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #7c4a00;
}

.avatar-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4caf50;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: 500;
}

/* 用户详情 */
.user-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 193, 7, 0.1);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-content {
  flex: 1;
}

.detail-label {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 4rpx;
  display: block;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

/* 功能区域 */
.function-section {
  margin-bottom: 40rpx;
}

.function-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.function-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.function-btn:active::before {
  left: 100%;
}

.admin-btn {
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  color: #7c4a00;
  box-shadow: 0 6rpx 20rpx rgba(255, 193, 7, 0.25);
}

.admin-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.2);
}

.btn-icon {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  backdrop-filter: blur(10rpx);
}

.btn-content {
  flex: 1;
  text-align: left;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #7c4a00;
  margin-bottom: 4rpx;
  display: block;
}

.btn-desc {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

.btn-arrow {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.arrow {
  font-size: 24rpx;
  color: #7c4a00;
  font-weight: bold;
}

/* 退出登录区域 */
.logout-section {
  margin-bottom: 40rpx;
}

.logout-btn-container {
  position: relative;
}

.logout-btn {
