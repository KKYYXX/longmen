/* pages/登录后的页面/登录后的页面.wxss */

.logged-in-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f9e286 0%, #fffbe6 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
}

.welcome-text {
  display: block;
  font-size: 32rpx;
  color: #666;
}

/* 用户信息卡片 */
.user-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-icon {
  font-size: 80rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-phone {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.user-type {
  display: block;
  font-size: 24rpx;
  color: #8B4513;
  background: #f9e286;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 功能按钮区域 */
.function-buttons {
  margin-bottom: 60rpx;
}

.function-btn {
  width: 100%;
  height: 120rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.function-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.admin-btn {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
  color: white;
}

.btn-icon {
  margin-right: 20rpx;
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 退出登录区域 */
.logout-section {
  text-align: center;
  margin-top: 60rpx;
}

.logout-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #FF4757 0%, #FF6B7A 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.3);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
}

.logout-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.logout-text {
  font-size: 32rpx;
}

/* 自定义tabBar样式 */
.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  transition: all 0.3s ease;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-item.active {
  color: #8B4513;
}

.tab-item:not(.active) {
  color: #7A7E83;
}

.tab-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 调整主容器底部边距，为tabBar留出空间 */
.logged-in-container {
  padding-bottom: 140rpx;
}