  transition: left 0.5s;
}

.logout-btn:active::before {
  left: 100%;
}

.logout-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.25);
}

.logout-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
}

.logout-btn .btn-icon {
  background: rgba(255, 255, 255, 0.2);
}

.logout-btn .btn-text {
  color: #ffffff;
}

.logout-btn .btn-desc {
  color: rgba(255, 255, 255, 0.8);
}

.logout-btn .btn-arrow {
  background: rgba(255, 255, 255, 0.2);
}

.logout-btn .arrow {
