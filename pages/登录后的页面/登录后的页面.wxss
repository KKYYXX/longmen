/* 底部信息区域 */
.footer {
  padding: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.footer-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.footer-icon {
  margin-bottom: 16rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.footer-subtext {
  font-size: 22rpx;
  color: #999;
  display: block;
  letter-spacing: 1rpx;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 1;
}

.decoration-line {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.3), transparent);
}

.decoration-dots {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 193, 7, 0.4);
  border-radius: 50%;
  animation: fadeInOut 2s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}



/* 响应式设计 */
@media (max-width: 750rpx) {
  .logged-in-container {
    padding: 0;
  }
  
  .header {
    padding: 60rpx 30rpx 40rpx 30rpx;
  }
  
  .logged-in-content,
  .footer {
    padding-left: 30rpx;
    padding-right: 30rpx;
  }
}

