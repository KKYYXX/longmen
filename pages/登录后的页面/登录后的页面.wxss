.login-btn .btn-arrow {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn .btn-arrow .arrow {
  font-size: 32rpx;
  color: #7c4a00;
  font-weight: bold;
}

/* 注册表单 */
.register-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.3);
  transition: all 0.3s ease;
  margin-top: 20rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.4);
}

.submit-btn.disabled {
  background: #cccccc;
  color: #999999;
  box-shadow: none;
}

.submit-btn .btn-icon {
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.submit-btn .btn-icon .icon {
  font-size: 24rpx;
  color: #ffffff;
}

.submit-btn .btn-content {
  flex: 1;
  text-align: left;
}

.submit-btn .btn-text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: bold;
  display: block;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.submit-btn .btn-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  line-height: 1.2;
}

.submit-btn .btn-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn .btn-arrow .arrow {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 密码提示 */
.password-hint {
  background: rgba(255, 193, 7, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  border-left: 4rpx solid #ffd580;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.hint-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.hint-icon .icon {
  font-size: 20rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #b8860b;
  line-height: 1.5;
}

/* 错误提示 */
.error-message {
  margin-top: 30rpx;
}

.error-card {
  background: #ffebee;
  border: 2rpx solid #ffcdd2;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.error-icon {
  width: 40rpx;
  height: 40rpx;
  background: #f44336;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.error-icon .icon {
  font-size: 24rpx;
  color: #ffffff;
}

.error-text {
  font-size: 26rpx;
  color: #d32f2f;
  line-height: 1.4;
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .logged-in-container {
    padding: 0;
  }
  
  .logged-in-content {
    padding-left: 30rpx;
    padding-right: 30rpx;
  }
  
  .form-container {
    padding: 30rpx;
  }
}