/* 登录后页面美化样式 */
.logged-in-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff9f0 0%, #fff5e6 100%);
  padding: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰区域 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 209, 80, 0.05) 100%);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 50rpx;
}

/* 页面头部 */
.header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx 40rpx;
  position: relative;
  z-index: 2;
}

.header-icon {
  margin-bottom: 30rpx;
}

.icon-container {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.icon-text {
  font-size: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: block;
}

/* 主要内容区域 */
.logged-in-content {
  padding: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

/* 欢迎信息区域 */
.welcome-section {
  margin-bottom: 40rpx;
}

.welcome-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.welcome-icon {
  margin-bottom: 16rpx;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 8rpx;
  display: block;
}

.welcome-subtext {
  font-size: 22rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

/* 区域标题 */
.section-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 4rpx;
  display: block;
}

.section-subtitle {
  font-size: 20rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

/* 用户信息区域 */
.user-info-section {
  margin-bottom: 40rpx;
}

.user-info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.user-avatar {
  text-align: center;
  margin-bottom: 24rpx;
}

.avatar-circle {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #7c4a00;
}

.avatar-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4caf50;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: 500;
}

/* 用户详情 */
.user-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 193, 7, 0.1);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-icon {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-content {
  flex: 1;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  display: block;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

/* 功能区域 */
.function-section {
  margin-bottom: 40rpx;
}

.function-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.function-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.function-btn:active::before {
  left: 100%;
}

.admin-btn {
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  color: #7c4a00;
  box-shadow: 0 6rpx 20rpx rgba(255, 193, 7, 0.25);
}

.admin-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.2);
}

.btn-icon {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  backdrop-filter: blur(10rpx);
}

.btn-content {
  flex: 1;
  text-align: left;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #7c4a00;
  margin-bottom: 4rpx;
  display: block;
}

.btn-desc {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

.btn-arrow {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.arrow {
  font-size: 24rpx;
  color: #7c4a00;
  font-weight: bold;
}

/* 退出登录区域 */
.logout-section {
  margin-bottom: 40rpx;
}

.logout-btn-container {
  position: relative;
}

.logout-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.logout-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.logout-btn:active::before {
  left: 100%;
}

.logout-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.25);
}

.logout-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
}

.logout-btn .btn-icon {
  background: rgba(255, 255, 255, 0.2);
}

.logout-btn .btn-text {
  color: #ffffff;
}

.logout-btn .btn-desc {
  color: rgba(255, 255, 255, 0.8);
}

.logout-btn .btn-arrow {
  background: rgba(255, 255, 255, 0.2);
}

.logout-btn .arrow {
  color: #ffffff;
}

/* 底部信息区域 */
.footer {
  padding: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.footer-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.footer-icon {
  margin-bottom: 16rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.footer-subtext {
  font-size: 22rpx;
  color: #999;
  display: block;
  letter-spacing: 1rpx;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 1;
}

.decoration-line {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.3), transparent);
}

.decoration-dots {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 193, 7, 0.4);
  border-radius: 50%;
  animation: fadeInOut 2s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}

/* 自定义tabBar样式 */
.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  border-top: 2rpx solid rgba(255, 193, 7, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 1000;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  transition: all 0.3s ease;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-item.active {
  color: #b8860b;
}

.tab-item:not(.active) {
  color: #7A7E83;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  background: rgba(255, 193, 7, 0.2);
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 调整主容器底部边距，为tabBar留出空间 */
.logged-in-container {
  padding-bottom: 140rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .logged-in-container {
    padding: 0;
  }
  
  .header {
    padding: 60rpx 30rpx 40rpx 30rpx;
  }
  
  .logged-in-content,
  .footer {
    padding-left: 30rpx;
    padding-right: 30rpx;
  }
}