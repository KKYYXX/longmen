/* 资料查询页面样式 */

.zcquery-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0;
  box-sizing: border-box;
  padding-top: 20rpx;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 40rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.search-box {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333333;
  padding: 0 20rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1a464;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.search-icon {
  font-size: 24rpx;
  color: #ffffff;
}

/* 文件统计信息 */
.file-stats {
  padding: 20rpx 40rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e9ecef;
}

.stats-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

/* 文件列表 */
.file-list {
  padding: 20rpx 0;
}

.file-item {
  margin: 0 40rpx 20rpx 40rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.file-item:active {
  transform: scale(0.98);
}

.file-item.expanded {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 文件头部 */
.file-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #ffffff;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.file-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.file-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.file-size, .file-date {
  font-size: 24rpx;
  color: #666666;
}

.file-actions {
  display: flex;
  align-items: center;
}


.expand-icon.expanded {
  transform: rotate(180deg);
}

