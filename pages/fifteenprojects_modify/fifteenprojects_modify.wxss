/* 删改项目页面样式 */

.modify-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff8e1 0%, #ffffff 40%, #fffbf0 100%);
  padding: 0;
  box-sizing: border-box;
}

.page-header {
  text-align: center;
  padding: 60rpx 40rpx 50rpx;
  background: linear-gradient(135deg, #F5E6A3 0%, #E8D5A3 100%);
  color: #6D4C41;
  position: relative;
  box-shadow: 0 8rpx 32rpx rgba(232, 213, 163, 0.3);
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #E8D5A3;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 步骤区域 */
.step-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin: 30rpx 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(232, 213, 163, 0.15);
  border: 2rpx solid rgba(232, 213, 163, 0.2);
  position: relative;
  overflow: hidden;
}

.step-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #F5E6A3 0%, #E8D5A3 100%);
}

.step-header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid rgba(232, 213, 163, 0.2);
  position: relative;
}

.step-header::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #F5E6A3 0%, #E8D5A3 100%);
  border-radius: 2rpx;
}

.step-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(232, 213, 163, 0.1);
}

.step-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

/* 项目列表 */
.project-list, .column-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.project-item, .column-item {
  display: flex;
  align-items: flex-start;
  background: #ffffff;
  border: 2rpx solid rgba(232, 213, 163, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 35rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  min-height: 120rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 163, 0.08);
}

.project-item.selected, .column-item.selected {
  background: rgba(232, 213, 163, 0.1);
  border-color: #E8D5A3;
  box-shadow: 0 8rpx 24rpx rgba(232, 213, 163, 0.2);
  transform: translateY(-3rpx);
}

.project-number, .column-number {
  background: linear-gradient(135deg, #F5E6A3 0%, #E8D5A3 100%);
  color: #6D4C41;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  margin-top: 5rpx;
  flex-shrink: 0;
  box-shadow: 0 3rpx 10rpx rgba(255, 249, 196, 0.4);
}

.project-info, .column-info {
  flex: 1;
  padding-left: 5rpx;
}

.project-name, .column-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.project-desc, .column-current {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-top: 5rpx;
}

.select-icon {
  font-size: 36rpx;
  color: #b8860b;
  font-weight: bold;
  margin-left: 25rpx;
  margin-top: 10rpx;
  align-self: flex-start;
}

/* 操作类型列表 */
.action-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border: 2rpx solid rgba(232, 213, 163, 0.2);
  border-radius: 16rpx;
  padding: 35rpx;
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 163, 0.08);
}

.action-item.selected {
  background: rgba(232, 213, 163, 0.1);
  border-color: #E8D5A3;
  box-shadow: 0 8rpx 24rpx rgba(232, 213, 163, 0.2);
  transform: translateY(-2rpx);
}

.action-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.action-info {
  flex: 1;
}

.action-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.4;
}

/* 修改内容区域 */
.modify-content {
  margin-bottom: 30rpx;
}

.current-content, .new-content {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e9ecef;
}

.content-label {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.content-text {
  font-size: 24rpx;
  color: #495057;
  line-height: 1.6;
  word-break: break-all;
}

.content-input {
  width: 100%;
  min-height: 120rpx;
  padding: 15rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  background: #ffffff;
  box-sizing: border-box;
  line-height: 1.6;
}

.content-input:focus {
  border-color: #2196F3;
  box-shadow: 0 0 0 3rpx rgba(33, 150, 243, 0.1);
}

/* 添加内容区域 */
.add-content {
  margin-bottom: 30rpx;
}

.upload-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.upload-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx dashed #2196F3;
  border-radius: 12rpx;
  padding: 40rpx 20rpx;
  transition: all 0.3s ease;
}

.upload-item:active {
  background: rgba(33, 150, 243, 0.1);
  border-color: #1976D2;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 输入区域 */
.input-section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.input-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 25rpx;
  padding: 10rpx 0;
}

.picker-text {
  color: #333333;
  font-size: 30rpx;
  padding: 15rpx 0;
  min-height: 60rpx;
  line-height: 1.6;
  display: flex;
  align-items: center;
}

.form-input {
  width: 100%;
  padding: 30rpx 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333333;
  background: #ffffff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  min-height: 120rpx;
  line-height: 1.6;
}

.form-input:focus {
  border-color: #2196F3;
  background: #ffffff;
  box-shadow: 0 0 0 2rpx rgba(33, 150, 243, 0.2);
}

/* 占位符样式 */
.form-input::placeholder {
  color: #999999;
  font-size: 30rpx;
}

/* 选择器样式优化 */
picker {
  width: 100%;
}

picker .form-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2196F3;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.add-btn:active {
  background: #1976D2;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.3);
}

/* 已添加内容 */
.added-content {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  border: 1rpx solid #e9ecef;
}

.added-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #e9ecef;
}

.added-item:last-child {
  margin-bottom: 0;
}

.item-type {
  background: #2196F3;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  margin-right: 15rpx;
}

.item-name {
  flex: 1;
  font-size: 24rpx;
  color: #333333;
}

.item-actions {
  margin-left: 15rpx;
}

.remove-btn {
  background: #f44336;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30rpx;
  margin-top: 80rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.next-btn, .save-btn {
  background: linear-gradient(135deg, #F5E6A3 0%, #E8D5A3 100%);
  color: #6D4C41;
  border: none;
  border-radius: 50rpx;
  padding: 22rpx 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(232, 213, 163, 0.4);
  transition: all 0.3s ease;
  min-width: 200rpx;
  order: 2; /* 放在右边 */
}

.next-btn:active, .save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(232, 213, 163, 0.5);
}

.next-btn[disabled] {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.back-btn {
  background: #ffffff;
  color: #E8D5A3;
  border: 2rpx solid #E8D5A3;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 163, 0.2);
  transition: all 0.3s ease;
  min-width: 160rpx;
  order: 1; /* 放在左边 */
}

.back-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(232, 213, 163, 0.3);
}

.cancel-btn {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #666666;
  border: 2rpx solid #CCCCCC;
  border-radius: 50rpx;
  padding: 18rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(204, 204, 204, 0.2);
  transition: all 0.3s ease;
  min-width: 160rpx;
  order: 1; /* 放在左边 */
}

.cancel-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(204, 204, 204, 0.3);
}

/* 删除内容页面样式 */
.delete-filter-section {
  background: #ffffff;
  border-radius: 20rpx;
  margin: 30rpx 0;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(232, 213, 163, 0.12);
  border: 2rpx solid rgba(232, 213, 163, 0.1);
  position: relative;
  overflow: hidden;
}

.delete-filter-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #F5E6A3 0%, #E8D5A3 100%);
}

.filter-title-area {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.filter-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #E8D5A3;
}

.filter-main-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.time-filter-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.time-filter-item {
  flex: 1;
  min-width: 140rpx;
  height: 80rpx;
  background: #ffffff;
  border: 2rpx solid rgba(232, 213, 163, 0.2);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 163, 0.1);
}

.time-filter-item.active {
  background: linear-gradient(135deg, #F5E6A3 0%, #E8D5A3 100%);
  border-color: #E8D5A3;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 163, 0.3);
  transform: translateY(-2rpx);
}

.time-filter-item.active .filter-text {
  color: #6D4C41;
  font-weight: 600;
}

.filter-text {
  font-size: 24rpx;
  color: #666666;
}

.custom-date-area {
  margin-top: 20rpx;
}

.custom-date-picker {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx 25rpx;
  height: 80rpx;
  box-sizing: border-box;
}

.date-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.date-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
}

.date-arrow {
  font-size: 20rpx;
  color: #999999;
}

/* 统计信息区域 */
.delete-stats-area {
  display: flex;
  gap: 25rpx;
  margin: 40rpx 0;
}

.stats-item {
  flex: 1;
  background: linear-gradient(135deg, #F5E6A3 0%, #E8D5A3 100%);
  border-radius: 20rpx;
  padding: 40rpx 25rpx;
  text-align: center;
  color: #6D4C41;
  box-shadow: 0 8rpx 24rpx rgba(232, 213, 163, 0.3);
  position: relative;
  overflow: hidden;
}

.stats-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 100%);
  pointer-events: none;
}

.stats-num {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.stats-desc {
  font-size: 26rpx;
  opacity: 0.95;
  position: relative;
  z-index: 1;
}

/* 批量操作区域 */
.batch-operation-area {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
}

.batch-select-btn, .batch-delete-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.batch-select-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
}

.batch-select-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(76, 175, 80, 0.4);
}

.batch-delete-btn {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  color: white;
}

.batch-delete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(244, 67, 54, 0.4);
}

.batch-text {
  font-size: 26rpx;
  font-weight: 600;
}

/* 进度记录区域 */
.delete-progress-area {
  background: #ffffff;
  border-radius: 20rpx;
  margin: 30rpx 0;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(232, 213, 163, 0.12);
  border: 2rpx solid rgba(232, 213, 163, 0.1);
  position: relative;
  overflow: hidden;
}

.delete-progress-area::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #F5E6A3 0%, #E8D5A3 100%);
}

.progress-area-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.progress-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #E8D5A3;
}

.progress-main-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 空状态 */
.delete-empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
}

.empty-icon-large {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-message {
  font-size: 28rpx;
  color: #999999;
}

/* 进度记录列表 */
.delete-progress-list {
  margin-top: 20rpx;
}

.delete-progress-item {
  display: flex;
  align-items: flex-start;
  background: #ffffff;
  border: 2rpx solid rgba(232, 213, 163, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 25rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 163, 0.08);
  min-height: 180rpx;
}

.delete-progress-item.item-selected {
  background: rgba(232, 213, 163, 0.1);
  border-color: #E8D5A3;
  box-shadow: 0 8rpx 24rpx rgba(232, 213, 163, 0.2);
  transform: translateY(-2rpx);
}

/* 删除页面状态区域样式 */
.delete-status-area {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
  min-width: 120rpx;
  margin-left: 20rpx;
}

.item-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-checkbox.checkbox-checked {
  background: #2196F3;
  border-color: #2196F3;
}

.checkbox-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 进度项内容 */
.item-content {
  flex: 1;
  margin-right: 15rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.item-time-info {
  display: flex;
  align-items: center;
}

.time-status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.time-status-dot.completed {
  background: #4CAF50;
}

.time-status-dot.ongoing {
  background: #FF9800;
}

.time-status-dot.pending {
  background: #9E9E9E;
}

.time-details {
  display: flex;
  flex-direction: column;
}

.item-date {
  font-size: 22rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.item-time {
  font-size: 20rpx;
  color: #666;
  line-height: 1.2;
}

.item-status {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  white-space: nowrap;
}

.item-status.completed {
  background: rgba(76,175,80,0.2);
  color: #4CAF50;
}

.item-status.ongoing {
  background: rgba(255,152,0,0.2);
  color: #FF9800;
}

.item-status.pending {
  background: rgba(158,158,158,0.2);
  color: #9E9E9E;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.item-details {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding: 8rpx 0;
}

.detail-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
  min-height: 42rpx;
}

.detail-label {
  font-size: 24rpx;
  width: 32rpx;
  text-align: center;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.5;
  min-height: 42rpx;
}

.detail-label {
