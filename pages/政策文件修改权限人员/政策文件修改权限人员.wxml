<view class="app-container">
  <!-- 头部标题 -->
  <view class="header">
    <view class="app-title">记录管理系统</view>
    <view class="app-subtitle">当前人员名单</view>
  </view>

  <!-- 搜索栏 -->
  <view class="search-section">
    <view class="search-box">
      <icon class="search-icon" type="search" size="18" />
      <input class="search-input" placeholder="搜索姓名/手机号" bindinput="onSearchInput" />
    </view>
    <view class="search-count">共 {{ filteredRecords.length }} 条记录</view>
  </view>

  <!-- 列表记录内容 -->
  <scroll-view class="records-container" scroll-y="true">
    <block wx:for="{{ filteredRecords }}" wx:key="index">
      <view class="record-card">
        <view class="record-name">{{ item.name }}</view>
        <view class="record-phone">
          <icon class="phone-icon" type="phone" size="18" />
          {{ item.phone }}
        </view>
        <view class="delete-btn" bindtap="onDeleteRecord" data-index="{{ index }}">删除</view>
      </view>
    </block>
  </scroll-view>

  <!-- 悬浮添加按钮 -->
  <view class="add-record" bindtap="toggleAddModal">
    +
    <view class="fab-text">新增记录</view>
  </view>

  <!-- 模态框 -->
  <view wx:if="{{ showModal }}" class="modal-overlay">
    <view class="modal-content">
      <view class="input-row">
        <view class="input-label">姓名</view>
        <input class="input-field" placeholder="请输入姓名" bindinput="onNameInput" />
      </view>
      <view class="input-row">
        <view class="input-label">手机号</view>
        <input class="input-field" placeholder="请输入手机号" bindinput="onPhoneInput" />
      </view>
      <view class="button-group">
        <view class="modal-btn cancel-btn" bindtap="cancelAdd">取消</view>
        <view class="modal-btn confirm-btn" bindtap="confirmAdd">确认</view>
      </view>
    </view>
  </view>

  <!-- 顶部提示 -->
  <view wx:if="{{ showNotification }}" class="notification">操作成功</view>
</view>
