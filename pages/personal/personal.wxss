/* personal页面美化样式 */
.personal-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff9f0 0%, #fff5e6 100%);
  padding: 0 0 140rpx 0; /* 底部留出tabBar空间 */
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰区域 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 209, 80, 0.05) 100%);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 50rpx;
}

/* 页面头部 */
.header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx 40rpx;
  position: relative;
  z-index: 2;
}

.header-icon {
  margin-bottom: 30rpx;
}

.icon-container {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.icon-text {
  font-size: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: block;
}

/* 主要内容区域 */
.personal-content {
  padding: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

/* 切换按钮样式 */
.switch-container {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.switch-btn {
  flex: 1;
  text-align: center;
  padding: 15rpx 24rpx;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.switch-btn.active {
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.3);
}

.switch-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.switch-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #b8860b;
  transition: color 0.3s ease;
}

.switch-subtext {
  font-size: 20rpx;
  color: #d4a017;
  font-weight: 500;
  transition: color 0.3s ease;
}

.switch-btn.active .switch-text,
.switch-btn.active .switch-subtext {
  color: #7c4a00;
}

/* 表单容器样式 */
.form-container {
  margin-bottom: 40rpx;
}

.form-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 8rpx;
  display: block;
}

.form-subtitle {
  font-size: 22rpx;
  color: #d4a017;
  font-weight: 500;
  letter-spacing: 1rpx;
  display: block;
}

.login-form, .register-form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

/* 登录方式切换样式 */
.login-type-switch {
  display: flex;
  background: #faf8f3;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.type-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.type-btn.active {
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  box-shadow: 0 2rpx 8rpx rgba(255, 193, 7, 0.3);
}

.type-icon {
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #b8860b;
  transition: color 0.3s ease;
}

.type-btn.active .type-text {
  color: #7c4a00;
}

/* 输入组样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  display: block;
}

.input-field {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e6e6e6;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  background: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #ffd580;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 193, 7, 0.1);
}

.input-field::placeholder {
  color: #ccc;
  font-size: 28rpx;
}

/* 密码容器 */
.password-container {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input {
  padding-right: 80rpx !important;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.password-toggle:active {
  background: rgba(255, 193, 7, 0.2);
  transform: scale(0.95);
}

.toggle-icon {
  font-size: 24rpx;
  color: #b8860b;
  transition: color 0.3s ease;
  user-select: none;
}

/* 密码提示 */
.password-hint {
  margin-top: 24rpx;
  padding: 10rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  border-left: 4rpx solid #667eea;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.hint-icon {
  width: 32rpx;
  height: 32rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hint-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  display: block;
}

.hint-subtext {
  font-size: 20rpx;
  color: #666;
  display: block;
}

/* 登录按钮组 */
.login-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 32rpx;
}

.login-btn, .submit-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.login-btn::before, .submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.login-btn:active::before, .submit-btn:active::before {
  left: 100%;
}

/* 按钮激活状态 */
.login-btn.active, .submit-btn.active {
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  color: #7c4a00;
  box-shadow: 0 6rpx 20rpx rgba(255, 193, 7, 0.25);
}

.login-btn.active:active, .submit-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.2);
}

/* 按钮禁用状态 */
.login-btn.disabled, .submit-btn.disabled {
  background: #e0e0e0;
  color: #999999;
  cursor: not-allowed;
  box-shadow: none;
}

.btn-icon {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  backdrop-filter: blur(10rpx);
}

.btn-content {
  flex: 1;
  text-align: left;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #7c4a00;
  margin-bottom: 4rpx;
  display: block;
}

.btn-desc {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

.btn-arrow {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.arrow {
  font-size: 24rpx;
  color: #7c4a00;
  font-weight: bold;
}

/* 错误提示 */
.error-message {
  margin-top: 24rpx;
}

.error-card {
  background: #fff5f5;
  border-radius: 16rpx;
  padding: 20rpx;
  border-left: 4rpx solid #f56565;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.error-icon {
  width: 32rpx;
  height: 32rpx;
  background: rgba(245, 101, 101, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.error-text {
  font-size: 26rpx;
  color: #c53030;
  font-weight: 500;
}

/* 底部信息区域 */
.footer {
  padding: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.footer-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.footer-icon {
  margin-bottom: 16rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.footer-subtext {
  font-size: 22rpx;
  color: #999;
  display: block;
  letter-spacing: 1rpx;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 1;
}

.decoration-line {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.3), transparent);
}

.decoration-dots {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 193, 7, 0.4);
  border-radius: 50%;
  animation: fadeInOut 2s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .personal-container {
    padding: 0;
  }
  
  .header {
    padding: 60rpx 30rpx 40rpx 30rpx;
  }
  
  .personal-content,
  .footer {
    padding-left: 30rpx;
    padding-right: 30rpx;
  }
}



