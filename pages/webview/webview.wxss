.webview-container {
  width: 100%;
  height: 100vh;
  background: #fef9e0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #fef9e0;
}

.loading-spinner {
  width: 60px;
  height: 60px;
  border: 4px solid #f9e286;
  border-top: 4px solid #e6d675;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #333;
  font-size: 16px;
  font-weight: 500;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40px;
  background: #fef9e0;
  text-align: center;
}

.error-icon {
  font-size: 80px;
  margin-bottom: 20px;
  opacity: 0.8;
  color: #e6d675;
}

.error-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
}

.error-desc {
  font-size: 16px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30px;
  max-width: 300px;
}

.error-actions {
  display: flex;
  flex-direction: column;
  gap: 15px;
  width: 100%;
  max-width: 280px;
}

.action-btn {
  padding: 15px 30px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
}

.retry-btn {
  background: #f9e286;
  color: #333;
  box-shadow: 0 2px 8px rgba(249, 226, 134, 0.3);
}

.retry-btn:active {
  transform: scale(0.95);
  background: #e6d675;
}

.copy-btn {
  background: #ffffff;
  color: #333;
  border: 2px solid #f9e286;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.copy-btn:active {
  transform: scale(0.95);
  background: #f9e286;
}

.back-btn {
  background: #f9e286;
  color: #333;
  box-shadow: 0 2px 8px rgba(249, 226, 134, 0.3);
}

.back-btn:active {
  transform: scale(0.95);
  background: #e6d675;
}

/* WebView样式 */
web-view {
  width: 100%;
  height: 100vh;
}

/* 本地文件信息显示样式 */
.local-file-info {
  padding: 40px 20px;
  background: #fef9e0;
  min-height: 100vh;
}

.file-header {
  display: flex;
  align-items: center;
  margin-bottom: 30px;
  padding: 20px;
  background: #ffffff;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.file-icon {
  font-size: 40px;
  margin-right: 20px;
}

.file-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  word-break: break-all;
}

.file-details {
  background: #ffffff;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.detail-item {
  display: flex;
  margin-bottom: 15px;
  align-items: flex-start;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 16px;
  font-weight: 600;
  color: #666;
  min-width: 80px;
  margin-right: 10px;
}

.detail-value {
  font-size: 16px;
  color: #333;
  word-break: break-all;
  flex: 1;
}

.local-status {
  color: #e74c3c;
  font-weight: 600;
}

.file-actions {
  text-align: center;
  padding: 20px;
}

.info-btn {
  display: inline-block;
  padding: 15px 30px;
  background: #f9e286;
  color: #333;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 600;
  box-shadow: 0 4px 15px rgba(249, 226, 134, 0.3);
}
