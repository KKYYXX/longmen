.app-container {
  width: 90%;
  max-width: 750rpx;
  max-height: 95vh;
  background-color: #FFF5E1;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.12);
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: 80rpx;
  margin: 0 auto;
}

.header {
  padding: 50rpx 40rpx 30rpx;
  background: linear-gradient(135deg, #F2D084 0%, #C18C5D 100%);
  color: #ffffff;
  text-align: center;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}

.app-title {
  font-size: 52rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}

.app-subtitle {
  font-size: 28rpx;
  opacity: 0.92;
  font-weight: 300;
}

.search-section {
  padding: 40rpx 40rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.search-box {
  background: #ffffff;
  border-radius: 50rpx;
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.08);
}

.search-icon {
  color: #666;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.search-input {
  border: none;
  outline: none;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  width: 100%;
  padding: 10rpx 0;
}

.search-count {
  text-align: right;
  font-size: 26rpx;
  margin-top: 16rpx;
  padding-right: 10rpx;
  color: #666;
}

.records-container {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx;
  max-height: 580px; /* 可保留，因无法用 rpx 适配 scroll 容器高度 */
}

.record-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  border-top: 8rpx solid #5EB7B7;
}

.record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.record-name {
  font-weight: 700;
  font-size: 38rpx;
  color: #333;
}

.record-time {
  font-size: 26rpx;
  color: #666;
  font-weight: 300;
}

.record-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-phone {
  font-size: 34rpx;
  color: #333;
  display: flex;
  align-items: center;
  font-weight: 500;
}

.phone-icon {
  margin-right: 20rpx;
  color: #5EB7B7;
  font-size: 36rpx;
}

.delete-btn {
  background-color: #fff0f0;
  border: 4rpx solid #ffd0d0;
  border-radius: 20rpx;
  padding: 20rpx 36rpx;
  color: #ff6b6b;
  font-weight: 600;
  transition: all 0.25s ease;
}

.add-record {
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #5EB7B7 0%, #499999 100%);
  color: #ffffff;
  border: none;
  font-size: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 36rpx rgba(0,0,0,0.25);
  z-index: 10;
}

.fab-text {
  font-size: 24rpx;
  position: absolute;
  top: -60rpx;
  right: 0;
  background: #499999;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  opacity: 0;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 110;
}

.modal-content {
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 70rpx;
  width: 85%;
  max-width: 680rpx;
  box-shadow: 0 40rpx 80rpx rgba(0,0,0,0.25);
}

.input-label {
  font-weight: 600;
  color: #333;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  padding: 32rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 24rpx;
  font-size: 32rpx;
  background-color: #fcfcfc;
}

.input-row {
  margin-bottom: 50rpx;
}

.button-group {
  display: flex;
  gap: 36rpx;
  margin-top: 60rpx;
}

.modal-btn {
  flex: 1;
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f6f6f6;
  color: #999;
  border: 4rpx solid #e6e6e6;
}

.confirm-btn {
  background: linear-gradient(135deg, #5EB7B7 0%, #499999 100%);
  color: #ffffff;
  border: none;
}

.notification {
  position: fixed;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #5EB7B7;
  color: white;
  padding: 30rpx 60rpx;
  border-radius: 100rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.2);
  font-weight: 600;
  z-index: 120;
  opacity: 0;
  min-width: 500rpx;
  text-align: center;
}

.notification.show {
  opacity: 1;
  top: 80rpx;
}