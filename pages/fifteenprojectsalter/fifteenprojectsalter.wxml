<view class="app-container">
  <view class="texture-overlay"></view>
  <view class="light-spot"></view>
  
  <view class="header">
    <view class="icon-wrapper">
      <view class="icon-circle">
        <text class="icon">📝</text>
      </view>
    </view>
    <view class="title-box">
      <text class="title">十五项项目修改</text>
      <text class="subtitle">核心功能·简洁操作</text>
    </view>
  </view>

  <view class="btn-container">
    <view class="function-card" bindtap="addColumn">
      <view class="card-content">
        <view class="text-content">
          <text class="card-title">新增列</text>
          <text class="card-desc">添加新的项目列</text>
        </view>
        <view class="icon-circle add-icon-circle">
          <text class="icon">➕</text>
        </view>
      </view>
    </view>

    <view class="function-card" bindtap="addProject">
      <view class="card-content">
        <view class="text-content">
          <text class="card-title">新增项目</text>
          <text class="card-desc">添加新的项目</text>
        </view>
        <view class="icon-circle project-icon-circle">
          <text class="icon">📊</text>
        </view>
      </view>
    </view>

    <view class="function-card" bindtap="modifyProject">
      <view class="card-content">
        <view class="text-content">
          <text class="card-title">修改项目</text>
          <text class="card-desc">修改现有项目</text>
        </view>
        <view class="icon-circle modify-icon-circle">
          <text class="icon">✏️</text>
        </view>
      </view>
    </view>

    <view class="function-card" bindtap="deleteProject">
      <view class="card-content">
        <view class="text-content">
          <text class="card-title">删除项目</text>
          <text class="card-desc">删除现有项目</text>
        </view>
        <view class="icon-circle delete-icon-circle">
          <text class="icon">🗑️</text>
        </view>
      </view>
    </view>
  </view>
</view>
