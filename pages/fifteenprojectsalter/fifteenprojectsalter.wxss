/* 十五项项目删改页面样式 */

.fifteen-projects-alter-container {
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #fff9e6 0%, #ffffff 30%, #fef7e0 100%);
}

/* 功能区域 */
.add-section, .modify-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 183, 77, 0.1);
  border: 1rpx solid rgba(255, 183, 77, 0.2);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 按钮通用样式 */
.add-column-btn, .add-project-btn, .modify-btn, .delete-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 12rpx;
  color: #ffffff;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 新增列按钮 */
.add-column-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.add-column-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 新增项目按钮 */
.add-project-btn {
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 183, 77, 0.3);
}

.add-project-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 183, 77, 0.4);
}

/* 修改按钮 */
.modify-btn {
  background: linear-gradient(135deg, #2196F3 0%, #42A5F5 100%);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.modify-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.4);
}

/* 删除按钮 */
.delete-btn {
  background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
  box-shadow: 0 4rpx 12rpx rgba(244, 67, 54, 0.3);
}

.delete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.4);
}
