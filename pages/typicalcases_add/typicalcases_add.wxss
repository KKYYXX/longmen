/* 添加典型案例页面样式 */

.add-case-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffbf0 0%, #ffffff 30%, #fff8e1 100%);
  padding: 0;
}

.page-header {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(255, 167, 38, 0.3);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #FFE082;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.step-item.active {
  opacity: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.3);
}

.step-text {
  font-size: 20rpx;
  color: #666666;
}

.step-item.active .step-text {
  color: #FFA726;
  font-weight: 600;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e0e0e0;
  margin: 0 20rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background: linear-gradient(90deg, #FFA726 0%, #FFB74D 100%);
}

/* 步骤内容 */
.step-content {
  padding: 40rpx 30rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 167, 38, 0.1);
  border: 2rpx solid rgba(255, 183, 77, 0.2);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #FF8F00;
  margin-bottom: 20rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #FFE082;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background: #fffbf0;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus, .form-textarea:focus {
  border-color: #FFA726;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 167, 38, 0.15);
}

.form-textarea {
  min-height: 140rpx;
  line-height: 1.6;
}

.form-textarea.large {
  min-height: 200rpx;
}

.form-picker {
  width: 100%;
}

.picker-display {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #FFE082;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background: #fffbf0;
  box-sizing: border-box;
}

/* 媒体文件区域 */
.media-group {
  margin-bottom: 50rpx;
  background: #fff8e1;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 2rpx solid #FFE082;
}

.media-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.media-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #FF8F00;
}

.add-media-btn {
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 25rpx;
  font-size: 24rpx;
  box-shadow: 0 3rpx 10rpx rgba(255, 167, 38, 0.3);
}

.media-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.media-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid rgba(255, 167, 38, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(255, 167, 38, 0.1);
}

.media-preview {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  border: 2rpx solid #FFE082;
}

.video-preview {
  width: 160rpx;
  height: 120rpx;
}

.media-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.media-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.media-size, .media-type, .media-duration {
  font-size: 22rpx;
  color: #666666;
}

.link-url {
  font-size: 20rpx;
  color: #FFA726;
  word-break: break-all;
}

.media-actions {
  display: flex;
  align-items: center;
}

.remove-btn {
  color: #ff4444;
  font-size: 24rpx;
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  background: rgba(255, 68, 68, 0.1);
}

.report-icon, .link-icon {
  width: 120rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: #fff8e1;
  border-radius: 8rpx;
  margin-right: 20rpx;
  border: 2rpx solid #FFE082;
}

/* 标签相关 */
.tag-input-section {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.tag-input {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #FFE082;
  border-radius: 8rpx;
  font-size: 24rpx;
  background: #ffffff;
}

.tag-add-btn {
  background: #FFA726;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: #FFE082;
  border-radius: 20rpx;
  padding: 8rpx 15rpx;
  border: 1rpx solid #FFA726;
}

.tag-text {
  font-size: 22rpx;
  color: #FF8F00;
  margin-right: 8rpx;
}

.tag-remove {
  font-size: 20rpx;
  color: #ff4444;
  font-weight: bold;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: rgba(255, 68, 68, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 预览区域 */
.preview-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 167, 38, 0.1);
  border: 2rpx solid rgba(255, 183, 77, 0.2);
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF8F00;
  margin-bottom: 30rpx;
  text-align: center;
}

.preview-item {
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #FFE082;
}

.preview-label {
  font-size: 26rpx;
  color: #FF8F00;
  font-weight: 600;
  margin-bottom: 10rpx;
  display: block;
}

.preview-value {
  font-size: 24rpx;
  color: #333333;
  line-height: 1.6;
}

.preview-stats {
  display: flex;
  justify-content: space-around;
  background: #fff8e1;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 2rpx solid #FFE082;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFA726;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666666;
}

.preview-tags {
  margin-top: 25rpx;
}

.preview-tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 15rpx;
}

.preview-tag {
  background: #FFE082;
  color: #FF8F00;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  border: 1rpx solid #FFA726;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30rpx;
  margin-top: 60rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #FFE082;
}

.next-btn, .submit-btn {
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(255, 167, 38, 0.4);
  transition: all 0.3s ease;
  min-width: 200rpx;
  order: 2;
}

.next-btn:active, .submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 167, 38, 0.5);
}

.back-btn {
  background: linear-gradient(135deg, #FFE082 0%, #FFF176 100%);
  color: #FF8F00;
  border: 2rpx solid #FFA726;
  border-radius: 50rpx;
  padding: 18rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(255, 224, 130, 0.3);
  transition: all 0.3s ease;
  min-width: 160rpx;
  order: 1;
}

.back-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(255, 224, 130, 0.4);
}

.cancel-btn {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #666666;
  border: 2rpx solid #CCCCCC;
  border-radius: 50rpx;
  padding: 18rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(204, 204, 204, 0.2);
  transition: all 0.3s ease;
  min-width: 160rpx;
  order: 1;
}

.cancel-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(204, 204, 204, 0.3);
}
