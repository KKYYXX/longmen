/* 增加文件页面样式 */

.zcalter-add-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 40rpx;
  box-sizing: border-box;
}

.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

.form-container {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.form-input, .form-textarea {
  width: 100%;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  background: #ffffff;
  box-sizing: border-box;
  line-height: 1.5;
  display: flex;
  align-items: center;
  min-height: 80rpx;
}

.form-input:focus, .form-textarea:focus {
  border-color: #efc758;
  outline: none;
}

.form-picker {
  width: 100%;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  background: #ffffff;
}

.picker-text {
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.upload-btn {
  width: 200rpx;
  height: 80rpx;
  background: #efc758;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.upload-btn:active {
  transform: scale(0.95);
}

.upload-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

.file-info {
  background: #ffffff;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.file-name, .file-size, .file-type {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.file-name {
  font-weight: bold;
  color: #333333;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  justify-content: center;
}

.submit-btn, .cancel-btn {
  width: 300rpx;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.submit-btn {
  background: #efc758;
  color: #ffffff;
}

.submit-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

.cancel-btn {
  background: #f1a464;
  color: #ffffff;
}

.cancel-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

.submit-btn:active, .cancel-btn:active {
  transform: scale(0.95);
} 