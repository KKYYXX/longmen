/* 新增项目页面样式 */

.add-project-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffef8 0%, #ffffff 40%, #fffcf0 100%);
  padding: 0;
}

.page-header {
  text-align: center;
  padding: 60rpx 40rpx 50rpx;
  background: linear-gradient(135deg, #fff9c4 0%, #fff3a0 100%);
  color: #4a4a4a;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(255, 249, 196, 0.4);
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #fff3a0;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  padding: 60rpx 40rpx 40rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 249, 196, 0.15);
  border: 1rpx solid rgba(255, 249, 196, 0.3);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #6b5b00;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #fff3a0;
  position: relative;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c2c2c;
  margin-bottom: 20rpx;
  line-height: 1.4;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.required-mark {
  color: #f44336;
  margin-left: 5rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 30rpx 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #2c2c2c;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 90rpx;
  line-height: 1.4;
}

/* 占位符样式 */
.form-input::placeholder, .form-textarea::placeholder {
  color: #999999;
  font-size: 28rpx;
  opacity: 1;
}

.form-input:focus, .form-textarea:focus {
  border-color: #fff3a0;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(255, 249, 196, 0.2);
}

.form-textarea {
  min-height: 150rpx;
  resize: none;
  line-height: 1.6;
  padding: 30rpx 25rpx;
}

.form-picker {
  width: 100%;
}

.picker-display {
  padding: 30rpx 60rpx 30rpx 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #2c2c2c;
  background: #ffffff;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 90rpx;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

/* 选择器占位符样式 */
.picker-display:empty::before {
  content: attr(data-placeholder);
  color: #999999;
  font-size: 28rpx;
}

.picker-display::after {
  content: '▼';
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #6c757d;
  font-size: 24rpx;
  pointer-events: none;
}

.slider-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.form-slider {
  flex: 1;
  margin: 20rpx 0;
}

.slider-unit {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 40rpx;
}

/* 文件上传区域 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border: 2rpx dashed #FFB74D;
  border-radius: 8rpx;
  background: rgba(255, 183, 77, 0.05);
  transition: all 0.3s ease;
}

.upload-area:active {
  background: rgba(255, 183, 77, 0.1);
  border-color: #FFA726;
}

.upload-icon {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #6c757d;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
}

.save-btn, .cancel-btn {
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.cancel-btn {
  color: #ffffff;
}

.save-btn {
  background: linear-gradient(135deg, #fff3a0 0%, #fff9c4 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 249, 196, 0.4);
  color: #4a4a4a;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 249, 196, 0.5);
}

.cancel-btn {
  background: linear-gradient(135deg, #9E9E9E 0%, #BDBDBD 100%);
  box-shadow: 0 4rpx 12rpx rgba(158, 158, 158, 0.3);
}

.cancel-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(158, 158, 158, 0.4);
}
