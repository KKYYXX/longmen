/* 新增项目页面样式 */

.add-project-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffbf0 0%, #ffffff 30%, #fff8e1 100%);
  padding: 0;
}

.page-header {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: white;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(255, 167, 38, 0.3);
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #FFB74D;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  padding: 60rpx 40rpx 40rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 183, 77, 0.1);
  border: 1rpx solid rgba(255, 183, 77, 0.2);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #FFB74D;
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 15rpx;
}

.required-mark {
  color: #f44336;
  margin-left: 5rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus, .form-textarea:focus {
  border-color: #FFB74D;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(255, 183, 77, 0.1);
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
  line-height: 1.6;
}

.form-picker {
  width: 100%;
}

.picker-display {
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  background: #f8f9fa;
  position: relative;
  transition: all 0.3s ease;
}

.picker-display::after {
  content: '▼';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #6c757d;
  font-size: 20rpx;
}

.slider-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.form-slider {
  flex: 1;
  margin: 20rpx 0;
}

.slider-unit {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 40rpx;
}

/* 文件上传区域 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border: 2rpx dashed #FFB74D;
  border-radius: 8rpx;
  background: rgba(255, 183, 77, 0.05);
  transition: all 0.3s ease;
}

.upload-area:active {
  background: rgba(255, 183, 77, 0.1);
  border-color: #FFA726;
}

.upload-icon {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #6c757d;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
}

.save-btn, .cancel-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 12rpx;
  color: #ffffff;
  transition: all 0.3s ease;
}

.save-btn {
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 183, 77, 0.3);
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 183, 77, 0.4);
}

.cancel-btn {
  background: linear-gradient(135deg, #9E9E9E 0%, #BDBDBD 100%);
  box-shadow: 0 4rpx 12rpx rgba(158, 158, 158, 0.3);
}

.cancel-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(158, 158, 158, 0.4);
}
