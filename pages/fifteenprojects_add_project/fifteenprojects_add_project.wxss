/* 新增项目页面样式 */

.add-project-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffef8 0%, #ffffff 40%, #fffcf0 100%);
  padding: 0;
}

.page-header {
  text-align: center;
  padding: 60rpx 40rpx 50rpx;
  background: linear-gradient(135deg, #fff9c4 0%, #fff3a0 100%);
  color: #4a4a4a;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(255, 249, 196, 0.4);
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #fff3a0;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  padding: 60rpx 40rpx 40rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 249, 196, 0.15);
  border: 1rpx solid rgba(255, 249, 196, 0.3);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #6b5b00;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #fff3a0;
  position: relative;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c2c2c;
  margin-bottom: 20rpx;
  line-height: 1.4;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.required-mark {
  color: #f44336;
  margin-left: 5rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 30rpx 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #2c2c2c;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 90rpx;
  line-height: 1.4;
}

/* 占位符样式 */
.form-input::placeholder, .form-textarea::placeholder {
  color: #999999;
  font-size: 28rpx;
  opacity: 1;
}

.form-input:focus, .form-textarea:focus {
  border-color: #fff3a0;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(255, 249, 196, 0.2);
}

.form-textarea {
  min-height: 150rpx;
  resize: none;
  line-height: 1.6;
  padding: 30rpx 25rpx;
}

.form-picker {
  width: 100%;
}

.picker-display {
  padding: 30rpx 60rpx 30rpx 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #2c2c2c;
  background: #ffffff;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 90rpx;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

/* 选择器占位符样式 */
.picker-display:empty::before {
  content: attr(data-placeholder);
  color: #999999;
  font-size: 28rpx;
}

.picker-display::after {
  content: '▼';
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #6c757d;
  font-size: 24rpx;
  pointer-events: none;
}

.slider-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.form-slider {
  flex: 1;
  margin: 20rpx 0;
}

.slider-unit {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 40rpx;
}



/* 按钮组 */
.button-group {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
}

.save-btn, .cancel-btn {
  flex: 1;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.cancel-btn {
  color: #ffffff;
}

.save-btn {
  background: linear-gradient(135deg, #fff3a0 0%, #fff9c4 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 249, 196, 0.4);
  color: #4a4a4a;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 249, 196, 0.5);
}

.cancel-btn {
  background: linear-gradient(135deg, #9E9E9E 0%, #BDBDBD 100%);
  box-shadow: 0 4rpx 12rpx rgba(158, 158, 158, 0.3);
}

.cancel-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(158, 158, 158, 0.4);
}

/* 联系人管理样式 */
.contacts-container {
  width: 100%;
}

.contacts-list {
  margin-bottom: 20rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e9ecef;
}

.contact-info {
  flex: 1;
}

.contact-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.contact-phone {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

.contact-actions {
  display: flex;
  gap: 20rpx;
}

.contact-edit-btn,
.contact-delete-btn {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  cursor: pointer;
}

.contact-edit-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.contact-delete-btn {
  background: #ffebee;
  color: #d32f2f;
}

.add-contact-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: #f0f8ff;
  border: 2rpx dashed #4a90e2;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-contact-btn:active {
  background: #e6f3ff;
  transform: scale(0.98);
}

.add-contact-icon {
  font-size: 36rpx;
  color: #4a90e2;
  margin-right: 12rpx;
}

.add-contact-text {
  font-size: 28rpx;
  color: #4a90e2;
  font-weight: 500;
}

/* 联系人弹窗样式 */
.contact-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.contact-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.contact-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 680rpx;
  max-width: 90%;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.contact-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.contact-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.contact-modal-close {
  font-size: 36rpx;
  color: #999999;
  cursor: pointer;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.contact-modal-close:active {
  background: #f5f5f5;
}

.contact-modal-body {
  padding: 40rpx;
}

.contact-form-item {
  margin-bottom: 30rpx;
}

.contact-form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.contact-form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #fafafa;
  box-sizing: border-box;
  min-height: 80rpx;
}

.contact-form-input:focus {
  border-color: #4a90e2;
  background: #ffffff;
}

.contact-modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #e9ecef;
}

.contact-cancel-btn,
.contact-save-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.contact-cancel-btn {
  background: #f5f5f5;
  color: #666666;
}

.contact-save-btn {
  background: #4a90e2;
  color: #ffffff;
}

.contact-cancel-btn:active {
  background: #e0e0e0;
}

.contact-save-btn:active {
  background: #357abd;
}
