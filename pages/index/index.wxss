/**index.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff9e6 0%, #ffffff 30%, #fef7e0 100%);
  padding: 60rpx 40rpx 120rpx 40rpx; /* 底部留出tabBar空间 */
  box-sizing: border-box;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 20%, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 80%, rgba(255, 152, 0, 0.08) 0%, transparent 50%);
  pointer-events: none;
}

.welcome {
  text-align: center;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #FF8F00 0%, #FFA726 50%, #FFB74D 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7);
  line-height: 1.5;
  font-weight: 500;
}

/* 功能特性展示 */
.features {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.feature-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.feature-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 16rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.8);
  line-height: 1.4;
}

.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  margin-top: 80rpx;
  position: relative;
  z-index: 1;
}

/* 按钮通用样式 */
.case-btn, .project-btn, .policy-btn {
  width: 500rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 600;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: none;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.case-btn:hover, .project-btn:hover, .policy-btn:hover {
  transform: translateY(-2rpx) scale(1.02);
}

/* 典型案例按钮样式 */
.case-btn {
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 50%, rgba(255, 167, 38, 0.8) 100%);
  box-shadow: 0 8rpx 20rpx rgba(255, 167, 38, 0.3);
}

.case-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 50%, rgba(255, 255, 255, 0.05) 100%);
  border-radius: 20rpx;
  pointer-events: none;
}

.case-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.4);
}

/* 十五项项目按钮样式 */
