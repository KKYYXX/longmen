/**index.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fffef8 0%, #fff5e6 100%);
  padding: 60rpx 40rpx 120rpx 40rpx; /* 底部留出tabBar空间 */
  box-sizing: border-box;
}

.welcome {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.button-container {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}

.policy-btn {
  background: linear-gradient(135deg, #f4e4c1 0%, #e8d5a8 100%);
  color: #8b6f47;
  border: 2rpx solid #d4c4a3;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(139, 111, 71, 0.2);
  transition: all 0.3s ease;
}

.policy-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(139, 111, 71, 0.3);
}
