/**index.wxss**/
page {
  background-color: #ffffff;
  color: #444;
  font-family: 'Segoe UI', 'Microsoft YaHei', sans-serif;
}

.app-container {
  width: 100%;
  min-height: 100vh;
  background: #ffffff;
  padding: 60rpx 40rpx 140rpx 40rpx; /* 底部留出tabBar空间 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景颗粒质感 */
.grain-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: radial-gradient(#ffeebf 1px, transparent 1px);
  background-size: 40rpx 40rpx;
  opacity: 0.15;
  pointer-events: none;
  z-index: 0;
}

/* 顶部导航栏 */
.header {
  background: linear-gradient(to right, #FFECB3, #FFE082);
  padding: 48rpx 40rpx 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  position: relative;
  z-index: 2;
}

.city-emblem {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #FFFDE7, #FFECB3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  z-index: 1;
  border: 2rpx solid rgba(255, 228, 130, 0.2);
}

.emblem-icon {
  font-size: 80rpx;
}

.app-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #5c5032;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 2rpx rgba(255, 255, 255, 0.7);
  z-index: 1;
}

.app-subtitle {
  font-size: 28rpx;
  color: #7a6c47;
  margin-bottom: 16rpx;
  z-index: 1;
  font-weight: 500;
}

/* 装饰元素 */
.decoration {
  position: absolute;
  pointer-events: none;
  z-index: 0;
}

.decoration-1 {
  top: 20rpx;
  right: 60rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: radial-gradient(#ffeebf, transparent 70%);
}

.decoration-2 {
  bottom: -30rpx;
  left: 40rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: radial-gradient(#ffefca, transparent 70%);
  opacity: 0.3;
}

/* 主要内容区 */
.content {
  padding: 50rpx 40rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  position: relative;
  z-index: 1;
}

/* 功能卡片 - 整合原有按钮样式的视觉效果 */

.feature-buttons {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  margin-top: 20rpx;
}


.feature-card {
  background: #ffffff;
  border-radius: 0;
  padding: 44rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 
    0 8rpx 30rpx rgba(255, 167, 38, 0.1),
    inset 0 0 0 2rpx #FFE082;
  transition: all 0.35s ease;
  color: #333333;
  position: relative;
  overflow: hidden;
  width: 680rpx;
  box-sizing: border-box;
  margin-left: -40rpx;
}


/* 卡片内渐变高光 */
.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 50%, rgba(255, 255, 255, 0.05) 100%);
  pointer-events: none;
}

/* 不同卡片的边框区分 */
.feature-card:nth-child(2) {
  border: 2rpx solid #FFE082;
  box-shadow: 0 8rpx 30rpx rgba(255, 183, 77, 0.1);
}

.feature-card:nth-child(3) {
  border: 2rpx solid #FFE082;
  box-shadow: 0 8rpx 30rpx rgba(241, 164, 100, 0.1);
}

/* 卡片交互效果 */
.feature-card:active {
  transform: translateY(3rpx);
  box-shadow: 
    0 4rpx 12rpx rgba(255, 167, 38, 0.2),
    inset 0 0 0 2rpx #FFE082;
}

.icon-container {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 224, 130, 0.1);
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
  border: 1rpx solid #FFE082;
}

.feature-icon {
  font-size: 56rpx;
  color: #FF8F00;
}

.feature-info {
  flex: 1;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-shadow: none;
  display: block;
  color: #333333;
}

.feature-desc {
  font-size: 25rpx;
  color: #666666;
  opacity: 0.85;
  line-height: 1.4;
  display: block;
}

/* 装饰性背景元素 */
.decoration-3 {
  bottom: 200rpx;
  left: -80rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: radial-gradient(#fffdf0, transparent 70%);
  opacity: 0.2;
}

.decoration-4 {
  top: 30%;
  right: -60rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: radial-gradient(#ffedba, transparent 70%);
  opacity: 0.2;
}

/* 底部区域 */
.footer {
  background: rgba(250, 250, 245, 0.8);
  padding: 28rpx 40rpx;
  text-align: center;
  border-top: 2rpx solid rgba(238, 238, 238, 0.6);
  z-index: 2;
}

.gov-seal {
  font-size: 25rpx;
  color: #6a6143;
  margin-top: 8rpx;
  font-weight: 500;
  display: block;
}

/* 临时自定义tabBar样式 */
.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  border-top: 2rpx solid rgba(255, 193, 7, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 9999;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  transition: all 0.3s ease;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-item.active {
  color: #b8860b;
}

.tab-item:not(.active) {
  color: #7A7E83;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  background: rgba(255, 193, 7, 0.2);
  transform: scale(1.1);
}

.tab-image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.tab-text {
  font-size: 24rpx;
  font-weight: bold;
}