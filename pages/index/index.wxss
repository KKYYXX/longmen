/**index.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fffbe6 0%, #ffe9b3 100%);
  padding: 60rpx 40rpx 120rpx 40rpx; /* 底部留出tabBar空间 */
  box-sizing: border-box;
}

.welcome {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}
