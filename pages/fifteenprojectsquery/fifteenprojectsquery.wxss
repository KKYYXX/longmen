/* 十五项项目查询页面样式 */

.fifteen-projects-query-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffbf0 0%, #ffffff 30%, #fff8e1 100%);
  padding: 0;
  box-sizing: border-box;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #f9e286 0%, #f0e68c 100%);
  border-bottom: 1rpx solid #FFE082;
  box-shadow: 0 4rpx 20rpx rgba(249, 226, 134, 0.2);
}

/* 时间筛选 */
.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  min-width: 100rpx;
}

.date-picker {
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  padding: 18rpx 24rpx;
  font-size: 24rpx;
  color: #333333;
  min-width: 180rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.date-picker:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.98);
}

.date-separator {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.clear-filter-btn {
  background: rgba(255, 107, 107, 0.1);
  border: 1rpx solid rgba(255, 107, 107, 0.3);
  border-radius: 12rpx;
  padding: 18rpx 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.clear-filter-btn:active {
  background: rgba(255, 107, 107, 0.2);
  transform: scale(0.98);
}

.clear-text {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: 500;
}



.filter-status {
  background: linear-gradient(135deg,#d6c90c 0% ,#f3b509 100%);
  border-radius: 25rpx;
  padding: 16rpx 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 15rpx rgba(225, 228, 86, 0.3);
  text-align: center;
  border: none;
}

.result-count {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}



/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(150, 127, 73, 0.15);
  border: 2rpx solid rgba(255, 236, 179, 0.3);
  margin-top: 25rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #7d6f4f;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #5c5032;
  background: transparent;
  border: none;
  outline: none;
}

.search-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.clear-search-btn {
  font-size: 20rpx;
  color: #999999;
  padding: 8rpx 12rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.clear-search-btn:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.9);
}

.search-btn {
  font-size: 26rpx;
  color: #FFB74D;
  font-weight: 600;
  padding: 8rpx 20rpx;
  background: rgba(255, 183, 77, 0.1);
  border-radius: 16rpx;
}

.search-btn:active {
  transform: translateY(-50%) scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 122, 255, 0.4);
}

.search-icon {
  font-size: 20rpx;
  color: #ffffff;
}

/* 项目列表 */
.project-list {
  padding: 30rpx 20rpx 20rpx;
}

.project-item {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: all 0.3s ease;
  border-left: 5rpx solid #f9e286;
  position: relative;
}

.project-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #f9e286 0%, transparent 100%);
}

.project-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 项目头部 */
.project-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 28rpx 20rpx;
}

.project-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.project-icon {
  font-size: 52rpx;
  margin-right: 24rpx;
  color: #FFB74D;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 183, 77, 0.3));
}

.project-details {
  flex: 1;
}

.project-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.project-meta {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 22rpx;
  color: #666666;
}

.project-start-date {
  color: #4CAF50;
  font-weight: 500;
}


.project-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx;
}

.view-detail-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.view-icon {
  font-size: 36rpx;
  color: #666666;
  opacity: 0.8;
}

.view-text {
  font-size: 20rpx;
  color: #666666;
  opacity: 0.7;
}

/* 项目开始时间 */
.project-start-date {
  font-size: 22rpx;
  color: #666666;
  background: rgba(249, 226, 134, 0.3);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  margin-top: 8rpx;
  display: inline-block;
  font-weight: 500;
}

/* 项目简介 */
.project-summary {
  margin-top: 24rpx;
  padding: 24rpx 28rpx;
  border-top: 1rpx solid rgba(249, 226, 134, 0.3);
  background: rgba(255, 255, 255, 0.5);
}

/* 主要目标标签 */
.summary-label {
  font-size: 22rpx;
  color: #666666;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.summary-text {
  font-size: 24rpx;
  color: #555555;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 0.3rpx;
}

.summary-more {
  margin-top: 12rpx;
  text-align: center;
}

.more-text {
  font-size: 20rpx;
  color: #FF9800;
  font-weight: 500;
  padding: 8rpx 16rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 12rpx;
  display: inline-block;
}

/* 移除了展开功能相关的样式 */

/* 详细信息区域 */
.detail-section {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.detail-section:last-child {
  border-bottom: none;
}

.content-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.content-text {
  font-size: 26rpx;
  color: #495057;
  line-height: 1.8;
  text-align: justify;
}

/* 联系人信息 */
.contact-section {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.contact-info {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 120rpx;
}

.contact-value {
  font-size: 24rpx;
  color: #333333;
  flex: 1;
}

/* 媒体区域 */
.media-section {
  margin-bottom: 30rpx;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.project-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 视频列表 */
.video-list {
  margin-top: 10rpx;
}

.project-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

/* 文件列表 */
.file-list {
  margin-top: 10rpx;
}

.file-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #dee2e6;
}

.file-icon {
  font-size: 32rpx;
}

/* 时间查询区域 */
.time-query-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 25rpx;
  text-align: center;
}

/* 时间按键 */
.time-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
  justify-content: center;
}

.time-btn {
  padding: 15rpx 25rpx;
  background: #ffffff;
  border: 2rpx solid #e9ecef;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.time-btn.active {
  background: linear-gradient(135deg, #fff9c4 0%, #fff3a0 100%);
  border-color: #fff3a0;
  color: #4a4a4a;
  box-shadow: 0 4rpx 15rpx rgba(255, 249, 196, 0.4);
}

.time-btn:active {
  transform: scale(0.95);
}

/* 自定义时间选择 */
.custom-time-section {
  border-top: 1rpx solid #e9ecef;
  padding-top: 25rpx;
}

.custom-time-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.custom-date-picker {
  padding: 15rpx 20rpx;
  background: #ffffff;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  min-width: 140rpx;
  text-align: center;
}

.query-btn {
  padding: 15rpx 30rpx;
  background: linear-gradient(135deg, #fff9c4 0%, #fff3a0 100%);
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #4a4a4a;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(255, 249, 196, 0.4);
  transition: all 0.3s ease;
}

.query-btn:active {
  transform: scale(0.95);
}

/* 进度记录加载状态 */
.progress-loading {
  text-align: center;
  padding: 60rpx 30rpx;
  margin-top: 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.loading-icon {
  display: block;
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 进度记录列表 */
.progress-records {
  margin-top: 30rpx;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.records-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 25rpx;
  text-align: center;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #fff3a0;
}

.record-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #fff3a0;
  transition: all 0.3s ease;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.record-summary {
  margin-bottom: 15rpx;
  line-height: 1.6;
  font-size: 26rpx;
}

.summary-person {
  font-weight: bold;
  color: #4a4a4a;
  background: #fff3a0;
  padding: 3rpx 8rpx;
  border-radius: 8rpx;
}

.summary-datetime {
  font-weight: 600;
  color: #666666;
  background: #e8f4fd;
  padding: 3rpx 8rpx;
  border-radius: 8rpx;
}

.summary-location {
  font-weight: 600;
  color: #666666;
  background: #f0f8e8;
  padding: 3rpx 8rpx;
  border-radius: 8rpx;
}

.summary-connector {
  color: #888888;
  margin: 0 5rpx;
}

.record-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  background: #ffffff;
  padding: 15rpx;
  border-radius: 8rpx;
  border-left: 3rpx solid #fff3a0;
  margin-top: 10rpx;
}

/* 无进度记录提示 */
.no-progress {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999999;
}

.no-progress-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.no-progress-text {
  font-size: 28rpx;
}

.file-name {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
}

.file-size {
  font-size: 24rpx;
  color: #6c757d;
}

/* 项目报告特殊样式 */
.report-item {
  background: linear-gradient(135deg, #fff3e0 0%, #ffffff 100%);
  border: 1rpx solid #FFB74D;
}

.report-item .file-icon {
  color: #FFB74D;
}



/* 加载状态 */
.load-more, .loading, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #6c757d;
}

.load-more {
  color: #FFB74D;
  cursor: pointer;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  color: #dee2e6;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 项目详情弹窗样式 */
.project-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 5%;
  left: 5%;
  width: 90%;
  max-height: 90%;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f9e286 0%, #f0e68c 100%);
  border-bottom: 1rpx solid #FFE082;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 20rpx;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  font-size: 32rpx;
  color: #666666;
  cursor: pointer;
}

/* 项目目标 */
.project-objectives {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.objectives-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.objectives-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  text-align: justify;
}

/* 项目详细信息区域 */
.project-info-section {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.info-item {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid rgba(249, 226, 134, 0.3);
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.info-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
  font-weight: 400;
}

/* 长文本样式 */
.info-value.long-text {
  max-height: 200rpx;
  overflow-y: auto;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

/* 联系人列表样式 */
.contact-list {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.contact-phone {
  font-size: 26rpx;
  color: #666666;
}

/* 进度条样式 */
.progress-display {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: 500;
  min-width: 60rpx;
}

.objectives-text {
  line-height: 1.6;
  text-align: justify;
  color: #444444;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #666666;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
