/* 十五项项目查询页面样式 */

.fifteen-projects-query-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffbf0 0%, #ffffff 30%, #fff8e1 100%);
  padding: 0;
  box-sizing: border-box;
}

/* 搜索区域 */
.search-section {
  padding: 30rpx;
  background: linear-gradient(135deg, #f9e286 0%, #f0e68c 100%);
  border-bottom: 1rpx solid #FFE082;
  box-shadow: 0 4rpx 20rpx rgba(249, 226, 134, 0.2);
}

/* 时间筛选 */
.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.filter-label {
  font-size: 28rpx;
  color: #333333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.date-picker {
  background: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: #495057;
  margin-right: 20rpx;
  min-width: 200rpx;
}

.date-separator {
  font-size: 26rpx;
  color: #6c757d;
  margin: 0 10rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  border: 1rpx solid #dee2e6;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333333;
  padding: 0;
}

.search-btn {
  padding: 10rpx;
  margin-left: 10rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #f9e286;
}

/* 项目列表 */
.project-list {
  padding: 20rpx;
}

.project-item {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.project-item:active {
  transform: scale(0.98);
}

/* 项目头部 */
.project-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.project-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.project-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  color: #FFB74D;
}

.project-details {
  flex: 1;
}

.project-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.project-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 24rpx;
  color: #6c757d;
}

.project-progress {
  color: #FFB74D;
  font-weight: 500;
}

.project-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  padding: 10rpx;
}

.view-icon {
  font-size: 20px;
  color: rgba(92,80,50,0.7);
}

.view-text {
  font-size: 12px;
  color: rgba(92,80,50,0.6);
}

/* 项目类型 */
.project-type {
  font-size: 12px;
  color: rgba(92,80,50,0.6);
  background: rgba(255,248,192,0.5);
  padding: 2px 8px;
  border-radius: 10px;
  margin-top: 5px;
  display: inline-block;
}

/* 项目简介 */
.project-summary {
  margin-top: 15px;
  padding-top: 15px;
  border-top: 1px solid rgba(255,236,179,0.5);
}

.summary-text {
  font-size: 14px;
  color: rgba(92,80,50,0.8);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 移除了展开功能相关的样式 */

/* 详细信息区域 */
.detail-section {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.detail-section:last-child {
  border-bottom: none;
}

.content-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.content-text {
  font-size: 26rpx;
  color: #495057;
  line-height: 1.8;
  text-align: justify;
}

/* 联系人信息 */
.contact-section {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.contact-info {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 120rpx;
}

.contact-value {
  font-size: 24rpx;
  color: #333333;
  flex: 1;
}

/* 媒体区域 */
.media-section {
  margin-bottom: 30rpx;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.project-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 视频列表 */
.video-list {
  margin-top: 10rpx;
}

.project-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

/* 文件列表 */
.file-list {
  margin-top: 10rpx;
}

.file-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #dee2e6;
}

.file-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  color: #6c757d;
}

.file-name {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
}

.file-size {
  font-size: 24rpx;
  color: #6c757d;
}

/* 项目报告特殊样式 */
.report-item {
  background: linear-gradient(135deg, #fff3e0 0%, #ffffff 100%);
  border: 1rpx solid #FFB74D;
}

.report-item .file-icon {
  color: #FFB74D;
}

/* 进度区域 */
.progress-section {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #FFB74D;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #FFB74D;
  font-weight: 500;
}

/* 加载状态 */
.load-more, .loading, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #6c757d;
}

.load-more {
  color: #FFB74D;
  cursor: pointer;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  color: #dee2e6;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6c757d;
}
