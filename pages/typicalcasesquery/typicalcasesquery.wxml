<view class="app-container">
  <view class="texture-overlay"></view>
  <view class="light-spot"></view>
  
  <view class="header">
    <view class="icon-wrapper">
      <view class="icon-circle">
        <text class="icon">🔍</text>
      </view>
    </view>
    <view class="title-box">
      <text class="title">典型案例查询</text>
      <text class="subtitle">查看已上传的典型案例</text>
    </view>
  </view>

  <!-- 搜索区域 -->
  <view class="search-container">
    <view class="search-box">
      <text class="search-icon">🔍</text>
      <input class="search-input" 
             placeholder="搜索案例标题或内容" 
             value="{{searchKeyword}}"
             bindinput="onSearchInput"
             bindconfirm="onSearch"/>
      <text class="search-btn" bindtap="onSearch">搜索</text>
    </view>
  </view>

  <!-- 案例列表 -->
  <view class="cases-container">
    <view class="case-item" wx:for="{{filteredCases}}" wx:key="id">
      <view class="case-header">
        <view class="case-title">
          <text class="title-text">{{item.title}}</text>
          <text class="case-type">{{item.type}}</text>
        </view>
        <view class="case-time">
          <text class="time-text">{{item.uploadTime}}</text>
        </view>
      </view>
      
      <view class="case-content">
        <text class="content-text">{{item.description}}</text>
      </view>
      
      <view class="case-stats">
        <view class="stat-item">
          <text class="stat-icon">📄</text>
          <text class="stat-text">{{item.fileCount}}个文件</text>
        </view>
        <view class="stat-item">
          <text class="stat-icon">🔗</text>
          <text class="stat-text">{{item.linkCount}}个链接</text>
        </view>
        <view class="stat-item">
          <text class="stat-icon">🎥</text>
          <text class="stat-text">{{item.videoCount}}个视频</text>
        </view>
      </view>
      
      <view class="case-actions">
        <text class="action-btn preview-btn" bindtap="previewCase" data-case="{{item}}">预览</text>
        <text class="action-btn video-btn" bindtap="playVideo" data-case="{{item}}">视频</text>
        <text class="action-btn news-btn" bindtap="viewNews" data-case="{{item}}">新闻</text>
        <text class="action-btn download-btn" bindtap="downloadCase" data-case="{{item}}">下载</text>
        <text class="action-btn share-btn" bindtap="shareCase" data-case="{{item}}">分享</text>
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{filteredCases.length === 0}}">
    <text class="empty-icon">📭</text>
    <text class="empty-title">暂无案例</text>
    <text class="empty-desc">还没有上传任何典型案例</text>
  </view>

  <!-- 加载更多 -->
  <view class="load-more" wx:if="{{hasMore && filteredCases.length > 0}}">
    <text class="load-more-btn" bindtap="loadMore">加载更多</text>
  </view>
</view>
