/* 主容器 */
.app-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8C0 0%, #FFDD8F 50%, #F5E6A3 100%);
  position: relative;
  overflow: hidden;
}

.texture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(139,117,65,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(139,117,65,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(139,117,65,0.1)"/><circle cx="10" cy="60" r="0.5" fill="rgba(139,117,65,0.1)"/><circle cx="90" cy="40" r="0.5" fill="rgba(139,117,65,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.light-spot {
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,248,192,0.2) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #5c5032;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(139,117,65,0.3);
  border-top: 3px solid #8B7541;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: rgba(92,80,50,0.8);
}

/* 主要内容 */
.main-content {
  position: relative;
  z-index: 1;
  padding: 20px;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30px;
  padding: 20px 0;
}

.back-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(139,117,65,0.3);
}

.back-icon {
  font-size: 20px;
  color: #5c5032;
}

.title-box {
  flex: 1;
  text-align: center;
  margin: 0 20px;
}

.title {
  display: block;
  font-size: 20px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 5px;
}

.subtitle {
  display: block;
  font-size: 14px;
  color: rgba(92,80,50,0.8);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.share-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(139,117,65,0.3);
}

.share-icon {
  font-size: 18px;
  color: #5c5032;
}

/* 自动操作提示 */
.auto-tip {
  display: flex;
  align-items: center;
  gap: 8px;
  margin: 20px;
  padding: 12px 16px;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 12px;
  border-left: 4px solid #2196f3;
  animation: pulse 2s infinite;
}

.tip-icon {
  font-size: 18px;
}

.tip-text {
  font-size: 14px;
  color: #1976d2;
  font-weight: 500;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.7; }
  100% { opacity: 1; }
}

/* 文件内容容器 */
.file-content-container {
  margin: 20px; /* 和上面的auto-tip一样的边距 */
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  overflow: hidden;
}

/* 文件头部卡片 */
.file-header-card {
  display: flex;
  align-items: center;
  padding: 20px 25px; /* 减少内边距 */
  background: linear-gradient(135deg, #fff8dc 0%, #faf0e6 100%); /* 更淡的颜色 */
  border-bottom: 1px solid rgba(255, 215, 0, 0.2); /* 更淡的边框 */
}

.file-icon-large {
  width: 50px; /* 适中的大小 */
  height: 50px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
}

.file-icon-large .icon {
  font-size: 24px; /* 适中的图标大小 */
}

.file-info-large {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.file-name-large {
  font-size: 16px; /* 适中的字体大小 */
  font-weight: 600; /* 稍微减轻字重 */
  color: #5c5032; /* 更温和的颜色 */
  margin-bottom: 4px;
  line-height: 1.3; /* 更好的行高 */
}

.file-size-large {
  font-size: 13px; /* 稍小的字体 */
  color: #8b7355; /* 更温和的颜色 */
  opacity: 0.8;
}

.open-btn-large {
  padding: 8px 16px; /* 更小的内边距 */
  background: rgba(255, 255, 255, 0.9);
  border-radius: 18px; /* 更小的圆角 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 更轻的阴影 */
  transition: all 0.3s ease;
  border: 1px solid rgba(92, 80, 50, 0.2); /* 添加淡边框 */
}

.open-btn-large:active {
  transform: scale(0.95);
}

.open-text {
  font-size: 14px; /* 更小的字体 */
  font-weight: 500; /* 减轻字重 */
  color: #5c5032; /* 更温和的颜色 */
}

/* 文件内容显示区域 */
.file-content-display {
  padding: 0;
}

.content-header {
  padding: 20px 25px 15px; /* 适中的内边距 */
  border-bottom: 1px solid rgba(255, 215, 0, 0.15);
  background: rgba(255, 248, 220, 0.3); /* 更淡的背景 */
}

.content-title {
  font-size: 16px; /* 适中的字体大小 */
  font-weight: 600;
  color: #5c5032;
  letter-spacing: 0.5px;
}

.content-body {
  padding: 25px; /* 适中的内边距 */
  background: #fff;
}

.content-text {
  font-size: 15px; /* 适中的字体大小 */
  line-height: 1.8; /* 舒适的行高 */
  color: #444; /* 更好的阅读颜色 */
  white-space: pre-line;
  word-wrap: break-word;
  letter-spacing: 0.3px; /* 适中的字间距 */
}

/* 文件附录区域 */
.file-appendix {
  background: #fff;
}

.appendix-section {
  padding: 20px 25px;
}

.appendix-divider {
  height: 2px;
  background: linear-gradient(90deg, #ffd700 0%, #ffed4e 50%, #ffd700 100%);
  margin-bottom: 20px;
  border-radius: 1px;
}

.appendix-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 15px;
}

/* 紧凑型视频列表 */
.videos-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.video-item-compact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: rgba(255, 248, 220, 0.3);
  border-radius: 12px;
  border-left: 4px solid #ffd700;
}

.video-info-compact {
  display: flex;
  align-items: center;
  flex: 1;
}

.video-icon-small {
  font-size: 20px;
  margin-right: 12px;
}

.video-details-compact {
  flex: 1;
}

.video-name-small {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: 500;
  margin-bottom: 4px;
}

.video-duration-small {
  font-size: 12px;
  color: #666;
}

.play-btn-small {
  padding: 8px 16px;
  background: #ffd700;
  color: #5c5032;
  border-radius: 15px;
  font-size: 12px;
  font-weight: bold;
}

/* 紧凑型链接列表 */
.links-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.link-item-compact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: rgba(255, 248, 220, 0.3);
  border-radius: 12px;
  border-left: 4px solid #ffd700;
}

.link-info-compact {
  display: flex;
  align-items: center;
  flex: 1;
}

.link-icon-small {
  font-size: 20px;
  margin-right: 12px;
}

.link-details-compact {
  flex: 1;
}

.link-title-small {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: 500;
  margin-bottom: 4px;
}

.link-url-small {
  font-size: 12px;
  color: #666;
  word-break: break-all;
}

.open-btn-small {
  padding: 8px 16px;
  background: #ffd700;
  color: #5c5032;
  border-radius: 15px;
  font-size: 12px;
  font-weight: bold;
}

/* 案例信息卡片 */
.case-info {
  margin-bottom: 30px;
}

.info-card {
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  padding: 25px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.1);
  backdrop-filter: blur(10px);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15px;
}

.case-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 15px;
}

.case-time {
  font-size: 12px;
  color: #666;
  white-space: nowrap;
}

.case-description {
  margin-bottom: 20px;
}

.description-text {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

/* 文件直接打开区域 */
.file-open-area {
  margin-bottom: 30px;
}

.file-card {
  display: flex;
  align-items: center;
  padding: 25px;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  border-radius: 16px;
  box-shadow: 0 8px 32px rgba(255, 215, 0, 0.3);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.file-card:active {
  transform: scale(0.98);
  box-shadow: 0 4px 20px rgba(255, 215, 0, 0.4);
}

.file-icon {
  width: 60px;
  height: 60px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20px;
}

.file-icon .icon {
  font-size: 30px;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.file-name {
  font-size: 16px;
  font-weight: bold;
  color: #2c3e50;
}

.file-size {
  font-size: 14px;
  color: #7f8c8d;
}

.open-btn {
  padding: 12px 24px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.btn-text {
  font-size: 14px;
  font-weight: bold;
  color: #2c3e50;
}

/* 标签页 */
.tab-container {
  margin-bottom: 20px;
}

.tab-header {
  display: flex;
  background: rgba(255,255,255,0.95);
  border-radius: 15px;
  padding: 5px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px 10px;
  border-radius: 10px;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #FFDD8F 0%, #F5E6A3 100%);
  color: #5c5032;
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(255,221,143,0.4);
  border: 1px solid rgba(139,117,65,0.3);
}

.tab-icon {
  font-size: 18px;
  margin-bottom: 5px;
}

.tab-text {
  font-size: 12px;
  font-weight: 500;
}

/* 内容标签页 */
.content-tab {
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  padding: 20px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.1);
  backdrop-filter: blur(10px);
  min-height: 300px;
}

/* 文件列表 */
.file-list, .video-list, .link-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.file-item, .video-item, .link-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: rgba(102,126,234,0.05);
  border-radius: 12px;
  border: 1px solid rgba(102,126,234,0.1);
  transition: all 0.3s ease;
}

.file-item:hover, .video-item:hover, .link-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(102,126,234,0.2);
}

.file-info, .video-info, .link-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.file-icon, .video-icon, .link-icon {
  width: 40px;
  height: 40px;
  background: rgba(102,126,234,0.1);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
}

.icon {
  font-size: 18px;
}

.file-details, .video-details, .link-details {
  flex: 1;
}

.file-name, .video-name, .link-title {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 3px;
}

.file-size, .video-size, .link-url {
  display: block;
  font-size: 12px;
  color: #666;
}

.link-url {
  word-break: break-all;
  max-width: 200px;
}

.file-actions, .video-actions, .link-actions {
  display: flex;
  gap: 10px;
}

.action-btn {
  padding: 8px 15px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.preview-btn {
  background: rgba(102,126,234,0.1);
  color: #667eea;
}

.download-btn {
  background: rgba(76,175,80,0.1);
  color: #4caf50;
}

.play-btn {
  background: rgba(255,152,0,0.1);
  color: #ff9800;
}

.open-btn {
  background: rgba(156,39,176,0.1);
  color: #9c27b0;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  text-align: center;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 15px;
  opacity: 0.5;
}

.empty-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
}

.empty-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
  text-align: center;
  padding: 40px;
}

.error-icon {
  font-size: 48px;
  margin-bottom: 20px;
}

.error-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.error-desc {
  font-size: 14px;
  color: rgba(255,255,255,0.8);
  margin-bottom: 30px;
  line-height: 1.5;
}

.retry-btn {
  padding: 12px 30px;
  background: rgba(255,255,255,0.2);
  border-radius: 25px;
  font-size: 14px;
  font-weight: 500;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.retry-btn:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.3);
}

/* 视频和链接区域样式 */
.video-section, .news-section {
  margin-bottom: 30px;
}

.section-title {
  margin-bottom: 20px;
}

.section-title .title-text {
  font-size: 18px;
  font-weight: 600;
  color: #5c5032;
  display: flex;
  align-items: center;
  gap: 10px;
}

.video-list, .link-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.video-item, .link-item {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.9);
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 4px 12px rgba(139,117,65,0.1);
  border: 1px solid rgba(139,117,65,0.1);
}

.video-info, .link-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.video-icon, .link-icon {
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, #FFE4B5, #DEB887);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
}

.video-icon .icon, .link-icon .icon {
  font-size: 20px;
}

.video-details, .link-details {
  flex: 1;
}

.video-name, .link-title {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #5c5032;
  margin-bottom: 5px;
}

.video-size, .link-url {
  display: block;
  font-size: 14px;
  color: #8B7541;
}

.video-actions, .link-actions {
  margin-left: 15px;
}

.action-btn {
  background: linear-gradient(135deg, #8B7541, #A0956B);
  color: white;
  padding: 10px 20px;
  border-radius: 16px;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #A0956B, #8B7541);
}