/* 典型案例查询页面样式 */
page {
  background: linear-gradient(135deg, #fffef8, #fffdf0);
  font-family: 'Segoe UI', 'Microsoft YaHei', sans-serif;
}

.app-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #FFFFFF, #FFFFF8);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 236, 179, 0.4);
}

.texture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(ellipse at 20% 20%, rgba(255, 248, 192, 0.2) 0%, transparent 70%),
    radial-gradient(ellipse at 80% 80%, rgba(255, 240, 168, 0.1) 0%, transparent 70%);
  z-index: 0;
}

.light-spot {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 252, 202, 0.3), transparent 70%);
  border-radius: 50%;
  pointer-events: none;
  z-index: 1;
}

/* 顶部标题区 */
.header {
  background: linear-gradient(to right, #FFECB3, #FFE082);
  padding: 84rpx 50rpx 50rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(150, 127, 73, 0.1);
  position: relative;
  z-index: 10;
  border-bottom: 2rpx solid rgba(255, 224, 130, 0.4);
}

.title-box {
  position: relative;
  z-index: 2;
}

.title {
  font-size: 52rpx;
  font-weight: 700;
  color: #5c5032;
  margin-bottom: 20rpx;
  letter-spacing: 1.6rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  display: block;
}

.subtitle {
  font-size: 30rpx;
  color: #7d6f4f;
  opacity: 0.9;
  display: block;
}

.icon-wrapper {
  position: absolute;
  top: -160rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 48rpx;
  box-shadow: 0 16rpx 50rpx rgba(150, 127, 73, 0.18);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 15;
}

.icon {
  color: #7d6f4f;
  font-size: 72rpx;
}

/* 搜索区域 */
.search-container {
  padding: 40rpx 60rpx 20rpx;
  position: relative;
  z-index: 5;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(150, 127, 73, 0.15);
  border: 2rpx solid rgba(255, 236, 179, 0.3);
}

.search-icon {
  font-size: 32rpx;
  color: #7d6f4f;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #5c5032;
  background: transparent;
}

.search-btn {
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: 600;
  padding: 8rpx 20rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 16rpx;
}



/* 案例列表 */
.cases-container {
  flex: 1;
  padding: 0 60rpx;
  position: relative;
  z-index: 5;
}

.case-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(150, 127, 73, 0.1);
  border: 2rpx solid rgba(255, 236, 179, 0.3);
  transition: all 0.3s ease;
}

.case-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(150, 127, 73, 0.2);
}

.case-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.case-title {
  flex: 1;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #5c5032;
  display: block;
  margin-bottom: 8rpx;
}

.case-type {
  font-size: 22rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.case-time {
  font-size: 24rpx;
  color: #7d6f4f;
  opacity: 0.8;
}

.case-content {
  margin-bottom: 24rpx;
}

.content-text {
  font-size: 26rpx;
  color: #5c5032;
  line-height: 1.6;
}

.case-stats {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #7d6f4f;
}

.case-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.preview-btn {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.download-btn {
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
}

.share-btn {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.action-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  position: relative;
  z-index: 5;
}

.empty-icon {
  font-size: 120rpx;
  color: #7d6f4f;
  opacity: 0.5;
  display: block;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5c5032;
  display: block;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #7d6f4f;
  opacity: 0.8;
  display: block;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 60rpx;
  position: relative;
  z-index: 5;
}

.load-more-btn {
  display: inline-block;
  padding: 16rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #5c5032;
  box-shadow: 0 4rpx 16rpx rgba(150, 127, 73, 0.1);
  border: 2rpx solid rgba(255, 236, 179, 0.3);
  transition: all 0.3s ease;
}

.load-more-btn:active {
  transform: scale(0.95);
}
