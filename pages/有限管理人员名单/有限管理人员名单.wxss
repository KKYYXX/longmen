/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fffbe6 0%, #ffe9b3 100%);
  padding: 60rpx 40rpx 120rpx 40rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
}

/* 内容区域 */
.content {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.12);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 功能按钮 */
.btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #e8f0ff 100%);
  border: 2rpx solid #cbd5e0;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 按钮悬停效果 */
.btn:active {
  background: linear-gradient(135deg, #e8f0ff 0%, #d6e8ff 100%);
  border-color: #a0aec0;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 按钮渐变边框效果 */
.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 1;
}

.btn:active::before {
  opacity: 0.1;
}

/* 按钮文字层级 */
.btn text {
  position: relative;
  z-index: 2;
}