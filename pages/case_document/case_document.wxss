/* 文档展示页面样式 */

/* 主容器 */
.document-container {
  min-height: 100vh;
  background: #ffffff;
  position: relative;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #333333;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid #cccccc;
  border-top: 3px solid #666666;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: #666666;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
  background: linear-gradient(135deg, #FFF8C0 0%, #FFDD8F 50%, #F5E6A3 100%);
  position: relative;
  z-index: 1;
}

.back-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(139,117,65,0.3);
}

.back-icon {
  font-size: 20px;
  color: #5c5032;
}

.title-box {
  flex: 1;
  text-align: center;
  margin: 0 20px;
}

.title {
  display: block;
  font-size: 20px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 5px;
}

.subtitle {
  display: block;
  font-size: 14px;
  color: rgba(92,80,50,0.8);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.share-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(139,117,65,0.3);
}

.share-icon {
  font-size: 18px;
  color: #5c5032;
}

/* 文档内容 */
.document-content {
  position: relative;
  z-index: 1;
  padding: 20px;
}



/* 文件内容显示区域 */
.file-content-display {
  background: #ffffff;
  padding: 20px;
  margin: 0;
}

/* 图片显示区域 */
.image-display {
  margin: 20px 0;
  text-align: center;
}

.content-image {
  max-width: 100%;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 文本内容显示 */
.content-body {
  margin: 20px 0;
}

.content-text {
  font-size: 16px;
  line-height: 1.8;
  color: #333333;
  white-space: pre-wrap;
  word-wrap: break-word;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

/* 文件操作按钮 */
.file-actions {
  display: flex;
  gap: 16px;
  margin-top: 24px;
  justify-content: center;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  border-radius: 25px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
  cursor: pointer;
}

.download-action {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
}

.download-action:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(76, 175, 80, 0.3);
}

.share-action {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
  box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
}

.share-action:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(33, 150, 243, 0.3);
}

.action-icon {
  font-size: 16px;
}

.action-text {
  font-size: 14px;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750px) {
  .file-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .action-btn {
    width: 100%;
    max-width: 200px;
    justify-content: center;
  }
  
  .content-text {
    font-size: 14px;
    line-height: 1.6;
  }
}

/* 文件附录区域 */
.file-appendix {
  background: #fff;
}

.appendix-section {
  padding: 20px 25px;
}

.appendix-divider {
  height: 2px;
  background: linear-gradient(90deg, #ffd700 0%, #ffed4e 50%, #ffd700 100%);
  margin-bottom: 20px;
  border-radius: 1px;
}

.appendix-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 15px;
}

/* 紧凑型视频列表 */
.videos-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.video-item-compact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: rgba(255, 248, 220, 0.3);
  border-radius: 12px;
  border-left: 4px solid #ffd700;
}

.video-info-compact {
  display: flex;
  align-items: center;
  flex: 1;
}

.video-icon-small {
  font-size: 20px;
  margin-right: 12px;
}

.video-details-compact {
  flex: 1;
}

.video-name-small {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: 500;
  margin-bottom: 4px;
}

.video-duration-small {
  font-size: 12px;
  color: #666;
}

.play-btn-small {
  padding: 8px 16px;
  background: #ffd700;
  color: #5c5032;
  border-radius: 15px;
  font-size: 12px;
  font-weight: bold;
}

/* 紧凑型链接列表 */
.links-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.link-item-compact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: rgba(255, 248, 220, 0.3);
  border-radius: 12px;
  border-left: 4px solid #ffd700;
}

.link-info-compact {
  display: flex;
  align-items: center;
  flex: 1;
}

.link-icon-small {
  font-size: 20px;
  margin-right: 12px;
}

.link-details-compact {
  flex: 1;
}

.link-title-small {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: 500;
  margin-bottom: 4px;
}

.link-url-small {
  font-size: 12px;
  color: #666;
  word-break: break-all;
}

.open-btn-small {
  padding: 8px 16px;
  background: #ffd700;
  color: #5c5032;
  border-radius: 15px;
  font-size: 12px;
  font-weight: bold;
}

/* 视频容器 */
.videos-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.video-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,248,192,0.3);
  border-radius: 12px;
  padding: 15px;
  border: 1px solid rgba(255,236,179,0.8);
}

.video-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.video-icon {
  width: 40px;
  height: 40px;
  background: #FFDD8F;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.video-icon .icon {
  font-size: 20px;
}

.video-details {
  flex: 1;
}

.video-name {
  display: block;
  font-size: 16px;
  color: #333;
  font-weight: 500;
  margin-bottom: 4px;
}

.video-duration {
  font-size: 14px;
  color: #666;
}

.video-actions {
  display: flex;
  gap: 8px;
}

/* 链接容器 */
.links-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.link-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,248,192,0.3);
  border-radius: 12px;
  padding: 15px;
  border: 1px solid rgba(255,236,179,0.8);
}

.link-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.link-icon {
  width: 40px;
  height: 40px;
  background: #FFDD8F;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.link-icon .icon {
  font-size: 20px;
}

.link-details {
  flex: 1;
}

.link-title {
  display: block;
  font-size: 16px;
  color: #333;
  font-weight: 500;
  margin-bottom: 4px;
}

.link-url {
  font-size: 14px;
  color: #007AFF;
  word-break: break-all;
}

.link-actions {
  display: flex;
  gap: 8px;
}

/* 操作按钮 */
.action-btn {
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.preview-btn {
  background: #FFDD8F;
  color: #5c5032;
  border: 1px solid rgba(139,117,65,0.3);
}

.preview-btn:active {
  background: #F5E6A3;
  transform: scale(0.95);
}

.download-btn {
  background: rgba(255,255,255,0.8);
  color: #5c5032;
  border: 1px solid rgba(139,117,65,0.3);
}

.download-btn:active {
  background: rgba(255,255,255,1);
  transform: scale(0.95);
}

.play-btn {
  background: #FFDD8F;
  color: #5c5032;
  border: 1px solid rgba(139,117,65,0.3);
}

.play-btn:active {
  background: #F5E6A3;
  transform: scale(0.95);
}

.open-btn {
  background: #FFDD8F;
  color: #5c5032;
  border: 1px solid rgba(139,117,65,0.3);
}

.open-btn:active {
  background: #F5E6A3;
  transform: scale(0.95);
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #333333;
  text-align: center;
}

.error-icon {
  font-size: 60px;
  margin-bottom: 20px;
  opacity: 0.6;
}

.error-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.error-desc {
  font-size: 16px;
  color: #666666;
  margin-bottom: 30px;
}

.retry-btn {
  background: #f0f0f0;
  color: #333333;
  padding: 12px 24px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 500;
  border: 1px solid #cccccc;
}
