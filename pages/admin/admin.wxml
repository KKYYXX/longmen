<!--pages/admin/admin.wxml-->
<view class="admin-container">
  <!-- 顶部装饰区域 -->
  <view class="top-decoration">
    <view class="decoration-circle circle-1"></view>
    <view class="decoration-circle circle-2"></view>
    <view class="decoration-circle circle-3"></view>
  </view>

  <!-- 页面头部 -->
  <view class="admin-header">
    <view class="header-icon">
      <view class="icon-container">
        <text class="icon-text">🔐</text>
      </view>
    </view>
    
  </view>


  <!-- 功能按钮区域 -->
  <view class="admin-content">
    <view class="content-header">
      <text class="content-title">功能操作</text>
    </view>
    
    <view class="button-group">
      <!-- 权限管理按钮 -->
      <view class="admin-btn-container">
        <button class="admin-btn primary-btn" bindtap="onLimitedManage">
          <view class="btn-icon">
            <text class="icon">⚙️</text>
          </view>
          <view class="btn-content">
            <text class="btn-text">权限管理</text>
          </view>
          <view class="btn-arrow">
            <text class="arrow">›</text>
          </view>
        </button>
      </view>

      <!-- 负责人转让按钮 -->
      <view class="admin-btn-container">
        <button class="admin-btn secondary-btn" bindtap="onTransferOwnership">
          <view class="btn-icon">
            <text class="icon">🔄</text>
          </view>
          <view class="btn-content">
            <text class="btn-text">负责人转让</text>
          </view>
          <view class="btn-arrow">
            <text class="arrow">›</text>
          </view>
        </button>
      </view>
    </view>
  </view>

  <!-- 底部信息区域 -->
  <view class="admin-footer">
    <view class="footer-card">
      <view class="footer-icon">
        <text class="icon">ℹ️</text>
      </view>
      <text class="footer-text">操作将影响账号权限分配</text>
      <text class="footer-subtext">Operations will affect account permission distribution</text>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="decoration-line"></view>
    <view class="decoration-dots">
      <view class="dot"></view>
      <view class="dot"></view>
      <view class="dot"></view>
    </view>
  </view>
</view>
