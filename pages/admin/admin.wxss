/* admin页面风格统一与personal页面 */
.admin-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fffbe6 0%, #ffe9b3 100%);
  padding: 60rpx 40rpx 120rpx 40rpx;
  box-sizing: border-box;
}

.admin-header {
  text-align: center;
  margin-bottom: 0;
}

.admin-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.admin-content {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);
  padding: 60rpx 32rpx 60rpx 32rpx;
  margin-bottom: 100rpx;
  margin-top: 60rpx;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.admin-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ffe9b3 0%, #ffd580 100%);
  color: #7c4a00;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  margin-bottom: 0;
  transition: background 0.3s;
}

.admin-btn:active {
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
}

.btn-text {
  font-size: 40rpx;
  font-weight: bold;
}

.admin-footer {
  margin-top: 40rpx;
  text-align: center;
}

.footer-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}


.user-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 0;
  margin: 0 auto;
  margin-top: 24rpx;
  width: 90%;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.user-name, .user-phone {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.user-phone {
  margin-bottom: 0;
}
