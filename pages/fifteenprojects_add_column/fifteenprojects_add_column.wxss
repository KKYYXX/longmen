/* 新增列页面样式 */

.add-column-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fffbf0 0%, #ffffff 30%, #fff8e1 100%);
  padding: 0;
}

.page-header {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: white;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(255, 167, 38, 0.3);
}

.page-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #FFB74D;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  padding: 60rpx 40rpx 40rpx;
}

/* 步骤区域 */
.step-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx;
  margin: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(255, 167, 38, 0.15);
  border: 2rpx solid rgba(255, 183, 77, 0.3);
}

.step-header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 3rpx solid #FFA726;
  position: relative;
}

.step-header::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #FFB74D;
  border-radius: 3rpx;
}

.step-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF8F00;
  text-shadow: 0 2rpx 4rpx rgba(255, 143, 0, 0.2);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #FFE082;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background: #fffbf0;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input {
  height: 90rpx;
}

.form-textarea {
  min-height: 140rpx;
}

.form-input:focus, .form-textarea:focus {
  border-color: #FFA726;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 167, 38, 0.15);
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

.form-picker {
  width: 100%;
}

.picker-display {
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333333;
  background: #f8f9fa;
  position: relative;
}

.picker-display::after {
  content: '▼';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #6c757d;
  font-size: 20rpx;
}

.form-switch {
  transform: scale(1.2);
}

/* 项目列表 */
.project-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.project-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border: 3rpx solid #FFE082;
  border-radius: 16rpx;
  padding: 35rpx;
  margin-bottom: 25rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 10rpx rgba(255, 224, 130, 0.2);
}

.project-item.selected {
  background: rgba(255, 167, 38, 0.15);
  border-color: #FFA726;
  box-shadow: 0 4rpx 15rpx rgba(255, 167, 38, 0.2);
}

.project-info {
  flex: 1;
  padding: 0 20rpx;
}

.project-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.project-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.select-icon {
  font-size: 36rpx;
  color: #FFA726;
  font-weight: bold;
  margin-left: 20rpx;
}

/* 内容列表 */
.content-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.content-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.project-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.content-input {
  width: 100%;
  min-height: 140rpx;
  padding: 20rpx;
  border: 2rpx solid #FFE082;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background: #fffbf0;
  box-sizing: border-box;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.content-input:focus {
  border-color: #FFA726;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 167, 38, 0.15);
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30rpx;
  margin-top: 80rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.next-btn, .save-btn {
  background: linear-gradient(135deg, #FFA726 0%, #FFB74D 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(255, 167, 38, 0.4);
  transition: all 0.3s ease;
  min-width: 200rpx;
  order: 2; /* 放在右边 */
}

.next-btn:active, .save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 167, 38, 0.5);
}

.next-btn[disabled] {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.back-btn {
  background: linear-gradient(135deg, #FFE082 0%, #FFF176 100%);
  color: #FF8F00;
  border: 2rpx solid #FFA726;
  border-radius: 50rpx;
  padding: 18rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(255, 224, 130, 0.3);
  transition: all 0.3s ease;
  min-width: 160rpx;
  order: 1; /* 放在左边 */
}

.back-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(255, 224, 130, 0.4);
}

.cancel-btn {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #666666;
  border: 2rpx solid #CCCCCC;
  border-radius: 50rpx;
  padding: 18rpx 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(204, 204, 204, 0.2);
  transition: all 0.3s ease;
  min-width: 160rpx;
  order: 1; /* 放在左边 */
}

.cancel-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(204, 204, 204, 0.3);
}
