/* pages/当前负责人/当前负责人.wxss */

/* 当前负责人页面美化样式 */
.manager-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff9f0 0%, #fff5e6 100%);
  padding: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰区域 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 209, 80, 0.05) 100%);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 50rpx;
}

/* 页面头部 */
.manager-header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx 40rpx;
  position: relative;
  z-index: 2;
}

.header-icon {
  margin-bottom: 30rpx;
}

.icon-container {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.icon-text {
  font-size: 60rpx;
}

.manager-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #b8860b;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  display: block;
}

.manager-subtitle {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: block;
}

/* 主要内容区域 */
.manager-content {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  padding: 40rpx;
  margin: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.content-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 8rpx;
  display: block;
}

.content-subtitle {
  font-size: 22rpx;
  color: #d4a017;
  font-weight: 500;
  letter-spacing: 1rpx;
  display: block;
}

/* 头像区域 */
.avatar-section {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.avatar-container {
  text-align: center;
}

.avatar-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
  position: relative;
}

.avatar-text {
  font-size: 64rpx;
  font-weight: bold;
  color: #7c4a00;
}

.avatar-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4caf50;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: 500;
}

/* 信息区域 */
.info-section {
  margin-bottom: 40rpx;
}

.info-card {
  background: #faf8f3;
  border-radius: 20rpx;
  padding: 32rpx;
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon {
  font-size: 24rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
  display: block;
  font-weight: 500;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

/* 操作区域 */
.action-section {
  margin-bottom: 40rpx;
}

.action-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #b8860b;
  margin-bottom: 4rpx;
  display: block;
}

.action-subtitle {
  font-size: 20rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

.transfer-btn-container {
  position: relative;
}

.transfer-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  background: linear-gradient(135deg, #ffd580 0%, #ffe9b3 100%);
  color: #7c4a00;
  box-shadow: 0 6rpx 20rpx rgba(255, 193, 7, 0.25);
}

.transfer-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.transfer-btn:active::before {
  left: 100%;
}

.transfer-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.2);
}

.btn-icon {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  backdrop-filter: blur(10rpx);
}

.btn-content {
  flex: 1;
  text-align: left;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #7c4a00;
  margin-bottom: 4rpx;
  display: block;
}

.btn-desc {
  font-size: 24rpx;
  color: #d4a017;
  font-weight: 500;
  display: block;
}

.btn-arrow {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.arrow {
  font-size: 24rpx;
  color: #7c4a00;
  font-weight: bold;
}

/* 底部信息区域 */
.manager-footer {
  padding: 0 40rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.footer-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 193, 7, 0.1);
}

.footer-icon {
  margin-bottom: 16rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.footer-subtext {
  font-size: 22rpx;
  color: #999;
  display: block;
  letter-spacing: 1rpx;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 1;
}

.decoration-line {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.3), transparent);
}

.decoration-dots {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 193, 7, 0.4);
  border-radius: 50%;
  animation: fadeInOut 2s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .manager-container {
    padding: 0;
  }
  
  .manager-header {
    padding: 60rpx 30rpx 40rpx 30rpx;
  }
  
  .manager-content,
  .manager-footer {
    margin-left: 30rpx;
    margin-right: 30rpx;
  }
}