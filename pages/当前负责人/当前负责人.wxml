<!--pages/当前负责人/当前负责人.wxml-->
<view class="manager-container">
  <!-- 顶部装饰区域 -->
  <view class="top-decoration">
    <view class="decoration-circle circle-1"></view>
    <view class="decoration-circle circle-2"></view>
    <view class="decoration-circle circle-3"></view>
  </view>

  <!-- 页面头部 -->
  <view class="manager-header">
    <view class="header-icon">
      <view class="icon-container">
        <text class="icon-text">👤</text>
      </view>
    </view>

  </view>

  <!-- 主要内容区域 -->
  <view class="manager-content">
    <view class="content-header">
      <text class="content-title">当前负责人信息</text>
    </view>
    


    <!-- 信息区域 -->
    <view class="info-section">
      <view class="info-card">
        <view class="info-item">
          <view class="info-icon">
            <text class="icon">📝</text>
          </view>
          <view class="info-content">
            <text class="info-label">姓名</text>
            <text class="info-value">{{managerInfo.name || '暂无'}}</text>
          </view>
        </view>

        <view class="info-item">
          <view class="info-icon">
            <text class="icon">📞</text>
          </view>
          <view class="info-content">
            <text class="info-label">电话</text>
            <text class="info-value">{{managerInfo.phone || '暂无'}}</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 转让按钮 -->
    <view class="action-section">
      <view class="action-header">
      </view>
      
      <view class="transfer-btn-container">
        <button class="transfer-btn" bindtap="onTransfer">
          <view class="btn-icon">
            <text class="icon">🔄</text>
          </view>
          <view class="btn-content">
            <text class="btn-text">转让负责人</text>
          </view>
          <view class="btn-arrow">
            <text class="arrow">›</text>
          </view>
        </button>
      </view>
    </view>
  </view>



  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="decoration-line"></view>
    <view class="decoration-dots">
      <view class="dot"></view>
      <view class="dot"></view>
      <view class="dot"></view>
    </view>
  </view>
</view>