.app-container {
  width: 100%;
  height: 100vh;
  background-color: #FFF5E1;
  display: flex;
  flex-direction: column;
  position: relative;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.header {
  padding: 40rpx 30rpx 25rpx;
  background: linear-gradient(135deg, #F2D084 0%, #C18C5D 100%);
  color: #ffffff;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  flex-shrink: 0;
}

.app-title {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.app-subtitle {
  font-size: 26rpx;
  opacity: 0.92;
  font-weight: 300;
}

.search-section {
  padding: 25rpx 30rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  flex-shrink: 0;
}

.search-box {
  background: #ffffff;
  border-radius: 50rpx;
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.08);
}

.search-icon {
  color: #666;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.search-input {
  border: none;
  outline: none;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  width: 100%;
  padding: 10rpx 0;
}

.search-count {
  text-align: right;
  font-size: 26rpx;
  margin-top: 16rpx;
  padding-right: 10rpx;
  color: #666;
}

.records-container {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 30rpx;
  height: calc(100vh - 300rpx);
  box-sizing: border-box;
}

.record-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border-top: 6rpx solid #5EB7B7;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}



.record-name {
  font-weight: 700;
  font-size: 36rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 26rpx;
  color: #666;
  font-weight: 300;
}



.record-phone {
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.phone-icon {
  margin-right: 16rpx;
  color: #5EB7B7;
  font-size: 32rpx;
}

.delete-btn {
  background-color: #fff0f0;
  border: 3rpx solid #ffd0d0;
  border-radius: 16rpx;
  padding: 16rpx 28rpx;
  color: #ff6b6b;
  font-weight: 600;
  font-size: 28rpx;
  transition: all 0.25s ease;
  cursor: pointer;
  align-self: flex-end;
}

.delete-btn:active {
  background-color: #ffe0e0;
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.add-record {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #5EB7B7 0%, #499999 100%);
  color: #ffffff;
  border: none;
  font-size: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.25);
  z-index: 100;
}

.fab-text {
  font-size: 24rpx;
  position: absolute;
  top: -60rpx;
  right: 0;
  background: #499999;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  opacity: 0;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 110;
}

.modal-content {
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 70rpx;
  width: 85%;
  max-width: 680rpx;
  box-shadow: 0 40rpx 80rpx rgba(0,0,0,0.25);
}

.input-label {
  font-weight: 600;
  color: #333;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  padding: 32rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 24rpx;
  font-size: 32rpx;
  background-color: #fcfcfc;
}

.input-row {
  margin-bottom: 50rpx;
}

.button-group {
  display: flex;
  gap: 36rpx;
  margin-top: 60rpx;
}

.modal-btn {
  flex: 1;
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  font-weight: 600;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f6f6f6;
  color: #999;
  border: 4rpx solid #e6e6e6;
}

.confirm-btn {
  background: linear-gradient(135deg, #5EB7B7 0%, #499999 100%);
  color: #ffffff;
  border: none;
}

.notification {
  position: fixed;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #5EB7B7;
  color: white;
  padding: 30rpx 60rpx;
  border-radius: 100rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.2);
  font-weight: 600;
  z-index: 120;
  opacity: 0;
  min-width: 500rpx;
  text-align: center;
}

.notification.show {
  opacity: 1;
  top: 80rpx;
}
