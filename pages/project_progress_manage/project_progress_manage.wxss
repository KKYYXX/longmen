/* 项目进度管理页面样式 */
.manage-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

.texture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
  pointer-events: none;
}

.light-spot {
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 10;
}

.back-btn, .action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.back-icon, .action-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.title-box {
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: white;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 项目列表样式 */
.project-list {
  padding: 0 40rpx;
}

.section-header {
  margin-bottom: 40rpx;
  text-align: center;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.section-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.project-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.project-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.project-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.25);
}

.project-info {
  flex: 1;
}

.project-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.project-type {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.project-arrow {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

/* 进度管理界面 */
.progress-manage {
  padding: 0 40rpx;
}

.project-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.back-project-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.progress-list {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.list-header {
  padding: 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.list-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.progress-items {
  max-height: 800rpx;
  overflow-y: auto;
}

.progress-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.progress-item:last-child {
  border-bottom: none;
}

.progress-content {
  flex: 1;
  margin-right: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-title {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}

.progress-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.progress-status.pending {
  background: rgba(255, 193, 7, 0.8);
}

.progress-status.ongoing {
  background: rgba(0, 123, 255, 0.8);
}

.progress-status.completed {
  background: rgba(40, 167, 69, 0.8);
}

.progress-details {
  margin-bottom: 15rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.detail-label {
  color: rgba(255, 255, 255, 0.8);
  min-width: 120rpx;
}

.detail-value {
  color: white;
  flex: 1;
}

.completion-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.completion-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.completion-bar {
  flex: 1;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.completion-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  transition: width 0.3s ease;
}

.completion-text {
  font-size: 24rpx;
  color: white;
  min-width: 60rpx;
}

.progress-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.edit-btn {
  background: rgba(0, 123, 255, 0.8);
}

.delete-btn {
  background: rgba(220, 53, 69, 0.8);
}

/* 空状态 */
.empty-progress {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: white;
  margin-bottom: 10rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单样式 */
.form-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.form-container {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 24rpx;
  color: #666;
}

.form-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
}

.form-input:focus, .form-textarea:focus {
  border-color: #007AFF;
  background: white;
}

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.form-textarea {
  height: 120rpx;
  resize: none;
}

.form-actions {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.form-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #007AFF;
  color: white;
}
