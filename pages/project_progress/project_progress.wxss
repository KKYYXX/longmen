/* 项目进度页面样式 */

/* 主容器 */
.progress-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8C0 0%, #FFDD8F 50%, #F5E6A3 100%);
  position: relative;
  overflow: hidden;
}

.texture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(139,117,65,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(139,117,65,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(139,117,65,0.1)"/><circle cx="10" cy="60" r="0.5" fill="rgba(139,117,65,0.1)"/><circle cx="90" cy="40" r="0.5" fill="rgba(139,117,65,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.light-spot {
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,248,192,0.2) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #5c5032;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(139,117,65,0.3);
  border-top: 3px solid #8B7541;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: rgba(92,80,50,0.8);
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
  position: relative;
  z-index: 1;
}

.back-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(139,117,65,0.3);
}

.back-icon {
  font-size: 20px;
  color: #5c5032;
}

.title-box {
  flex: 1;
  text-align: center;
  margin: 0 20px;
}

.title {
  display: block;
  font-size: 20px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 5px;
}

.subtitle {
  display: block;
  font-size: 14px;
  color: rgba(92,80,50,0.8);
}

.header-actions {
  display: flex;
  gap: 10px;
  align-items: center;
}

.action-btn, .share-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(139,117,65,0.3);
}

.action-btn:active, .share-btn:active {
  background: rgba(255,255,255,0.5);
  transform: scale(0.95);
}

.action-icon, .share-icon {
  font-size: 18px;
  color: #5c5032;
}

/* 主要内容 */
.main-content {
  position: relative;
  z-index: 1;
  padding: 0 20px 40px;
}

/* 任务目标卡片 */
.objectives-card {
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  padding: 25px;
  margin-bottom: 20px;
  box-shadow: 0 8px 32px rgba(139,117,65,0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,236,179,0.6);
}

.card-header {
  margin-bottom: 20px;
}

.card-title {
  font-size: 20px;
  font-weight: bold;
  color: #5c5032;
}

.objectives-content {
  margin-bottom: 25px;
}

.objectives-text {
  font-size: 16px;
  color: #333;
  line-height: 1.7;
  text-align: justify;
}

/* 项目信息 */
.project-info {
  background: rgba(255,248,192,0.3);
  border-radius: 15px;
  padding: 20px;
  border: 1px solid rgba(255,236,179,0.8);
}

.info-row {
  display: flex;
  gap: 20px;
  margin-bottom: 15px;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.info-label {
  font-size: 14px;
  color: rgba(92,80,50,0.7);
  font-weight: 500;
}

.info-value {
  font-size: 16px;
  color: #5c5032;
  font-weight: 600;
}

/* 时间线区域 */
.timeline-section {
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  padding: 25px;
  margin-bottom: 20px;
  box-shadow: 0 8px 32px rgba(139,117,65,0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,236,179,0.6);
}

.section-header {
  margin-bottom: 20px;
}

.section-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 5px;
}

.section-subtitle {
  font-size: 14px;
  color: rgba(92,80,50,0.6);
}

/* 时间筛选 */
.time-filter {
  margin-bottom: 25px;
}

.filter-buttons {
  display: flex;
  gap: 10px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

.date-picker-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  background: rgba(255,248,192,0.5);
  border-radius: 25px;
  padding: 10px 15px;
  border: 1px solid rgba(255,236,179,0.8);
  flex: 1;
}

.picker-icon {
  font-size: 16px;
}

.picker-text {
  font-size: 15px;
  color: #5c5032;
  flex: 1;
}

.picker-arrow {
  font-size: 12px;
  color: rgba(92,80,50,0.6);
}

.filter-btn {
  background: #FFDD8F;
  color: #5c5032;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
  border: 1px solid rgba(139,117,65,0.3);
  flex: 1;
  text-align: center;
  min-width: 70px;
}

.filter-btn.active {
  background: #8B7541;
  color: white;
  border-color: #8B7541;
}

.filter-btn:active {
  background: #F5E6A3;
  transform: scale(0.95);
}

/* 进度列表 */
.progress-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.progress-item {
  display: flex;
  gap: 15px;
  background: rgba(255,248,192,0.3);
  border-radius: 15px;
  padding: 20px;
  border: 1px solid rgba(255,236,179,0.8);
  transition: all 0.3s ease;
}

.progress-item.today {
  border-color: #FFDD8F;
  box-shadow: 0 4px 15px rgba(255,221,143,0.3);
}

.progress-item:active {
  transform: scale(0.98);
}

/* 时间信息 */
.progress-time {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  min-width: 80px;
}

.time-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  margin-top: 6px;
  flex-shrink: 0;
}

.time-dot.completed {
  background: #4CAF50;
}

.time-dot.ongoing {
  background: #FF9800;
}

.time-dot.pending {
  background: #9E9E9E;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.time-date {
  font-size: 14px;
  color: #5c5032;
  font-weight: 600;
}

.time-period {
  font-size: 12px;
  color: rgba(92,80,50,0.6);
}

/* 进度内容 */
.progress-content {
  flex: 1;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12px;
}

.progress-actions {
  display: flex;
  align-items: center;
  gap: 10px;
}

.progress-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.progress-status {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 10px;
  font-weight: 500;
}

.progress-status.completed {
  background: rgba(76,175,80,0.2);
  color: #4CAF50;
}

.progress-status.ongoing {
  background: rgba(255,152,0,0.2);
  color: #FF9800;
}

.progress-status.pending {
  background: rgba(158,158,158,0.2);
  color: #9E9E9E;
}

/* 删除按钮 */
.delete-btn {
  padding: 6px;
  border-radius: 50%;
  background: rgba(244,67,54,0.1);
  border: 1px solid rgba(244,67,54,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 32px;
  min-height: 32px;
}

.delete-btn:active {
  background: rgba(244,67,54,0.2);
  transform: scale(0.9);
}

.delete-icon {
  font-size: 14px;
}

/* 详情信息 */
.progress-details {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 15px;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.detail-icon {
  font-size: 14px;
  width: 20px;
}

.detail-text {
  font-size: 14px;
  color: #666;
  flex: 1;
}

/* 进度图片 */
.progress-images {
  display: flex;
  gap: 8px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

.progress-image {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  object-fit: cover;
}

/* 进度视频 */
.progress-videos {
  margin-top: 12px;
}

.progress-video-item {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background: rgba(255,255,255,0.3);
  border-radius: 8px;
  margin-bottom: 8px;
  border: 1px solid rgba(139,117,65,0.2);
}

.video-icon {
  font-size: 16px;
  margin-right: 8px;
}

.video-text {
  font-size: 14px;
  color: #5c5032;
}

/* 进度文档 */
.progress-documents {
  margin-top: 12px;
}

.progress-document-item {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background: rgba(255,255,255,0.3);
  border-radius: 8px;
  margin-bottom: 8px;
  border: 1px solid rgba(139,117,65,0.2);
}

.document-icon {
  font-size: 16px;
  margin-right: 8px;
}

.document-text {
  font-size: 14px;
  color: #5c5032;
}

/* 完成度 */
.completion-info {
  display: flex;
  align-items: center;
  gap: 10px;
}

.completion-label {
  font-size: 14px;
  color: #666;
  white-space: nowrap;
}

.completion-bar {
  flex: 1;
  height: 6px;
  background: rgba(255,236,179,0.5);
  border-radius: 3px;
  overflow: hidden;
}

.completion-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFDD8F 0%, #F5E6A3 100%);
  border-radius: 3px;
  transition: width 0.3s ease;
}

.completion-text {
  font-size: 14px;
  color: #5c5032;
  font-weight: 600;
  white-space: nowrap;
}

/* 空状态 */
.empty-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
  text-align: center;
}

.empty-icon {
  font-size: 60px;
  margin-bottom: 15px;
  opacity: 0.6;
}

.empty-text {
  font-size: 16px;
  color: #5c5032;
  margin-bottom: 8px;
}

.empty-hint {
  font-size: 14px;
  color: rgba(92,80,50,0.6);
}

/* 统计区域 */
.stats-section {
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  padding: 25px;
  box-shadow: 0 8px 32px rgba(139,117,65,0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,236,179,0.6);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-top: 15px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,248,192,0.3);
  border-radius: 15px;
  padding: 20px;
  border: 1px solid rgba(255,236,179,0.8);
}

.stat-number {
  font-size: 24px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 5px;
}

.stat-label {
  font-size: 14px;
  color: rgba(92,80,50,0.7);
  text-align: center;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #5c5032;
  text-align: center;
}

.error-icon {
  font-size: 60px;
  margin-bottom: 20px;
  opacity: 0.6;
}

.error-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.error-desc {
  font-size: 16px;
  color: rgba(92,80,50,0.7);
  margin-bottom: 30px;
}

.retry-btn {
  background: #FFDD8F;
  color: #5c5032;
  padding: 12px 24px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 500;
  border: 1px solid rgba(139,117,65,0.3);
}
