/* 基础样式 - 保持与其他页面一致 */
page {
  background: linear-gradient(180deg, #fffbf0 0%, #ffffff 30%, #fff8e1 100%);
  font-family: Arial, sans-serif;
  width: 100%;
  min-height: 100%;
}

.document-viewer-container {
  width: 92%;
  margin: 20rpx auto;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  min-height: calc(100vh - 80rpx);
  display: flex;
  flex-direction: column;
}



/* 内容区域 - 保持与其他页面一致的风格 */
.loading-container,
.error-container,
.success-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 25rpx;
  background: linear-gradient(135deg, #f9e286 0%, #f0e68c 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(249, 226, 134, 0.2);
}

.loading-content,
.error-content,
.success-content {
  text-align: center;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  width: 100%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 加载状态 */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(249, 226, 134, 0.3);
  border-top: 4rpx solid #f9e286;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #555555;
  font-weight: 500;
}

/* 错误状态 */
.error-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  color: #f9e286;
}

.error-title {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.error-message {
  display: block;
  font-size: 26rpx;
  color: #555555;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.retry-btn,
.back-btn {
  padding: 18rpx 32rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.retry-btn {
  background: linear-gradient(135deg, #f9e286 0%, #f0e68c 100%);
  color: #333333;
  box-shadow: 0 2rpx 8rpx rgba(249, 226, 134, 0.3);
}

.back-btn {
  background: rgba(255, 255, 255, 0.8);
  color: #333333;
  border: 1rpx solid rgba(249, 226, 134, 0.5);
}

/* 成功状态 */
.success-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #f9e286 0%, #f0e68c 100%);
  color: #333333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(249, 226, 134, 0.4);
}

.success-text {
  display: block;
  font-size: 28rpx;
  color: #555555;
  margin-bottom: 40rpx;
  font-weight: 500;
}
