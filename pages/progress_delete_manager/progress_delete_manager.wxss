/* 页面容器 */
.delete-manager-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8C0 0%, #FFDD8F 100%);
  position: relative;
  overflow: hidden;
}

/* 纹理叠加 */
.texture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 50%, rgba(139,117,65,0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(139,117,65,0.08) 0%, transparent 50%),
    radial-gradient(circle at 40% 80%, rgba(139,117,65,0.06) 0%, transparent 50%);
  pointer-events: none;
}

/* 光斑效果 */
.light-spot {
  position: absolute;
  top: 10%;
  right: 15%;
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* 头部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 20px 15px;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(139,117,65,0.2);
}

.back-btn, .placeholder {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn {
  background: rgba(255,255,255,0.8);
  border-radius: 50%;
  border: 1px solid rgba(139,117,65,0.3);
}

.back-icon {
  font-size: 18px;
  color: #5c5032;
  font-weight: bold;
}

.title-box {
  flex: 1;
  text-align: center;
}

.title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 2px;
}

.subtitle {
  font-size: 12px;
  color: rgba(92,80,50,0.7);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100px 20px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(139,117,65,0.3);
  border-top: 3px solid #8B7541;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #5c5032;
  font-size: 14px;
}

/* 主要内容 */
.main-content {
  padding: 20px;
}

/* 区域标题 */
.section-header {
  margin-bottom: 15px;
}

.section-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #5c5032;
  margin-bottom: 5px;
}

.section-subtitle {
  font-size: 12px;
  color: rgba(92,80,50,0.6);
}

/* 时间筛选区域 */
.time-filter-section {
  background: rgba(255,255,255,0.8);
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  border: 1px solid rgba(139,117,65,0.2);
}

.filter-buttons {
  display: flex;
  gap: 10px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

.filter-btn {
  background: #FFDD8F;
  color: #5c5032;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
  border: 1px solid rgba(139,117,65,0.3);
  flex: 1;
  text-align: center;
  min-width: 70px;
}

.filter-btn.active {
  background: #8B7541;
  color: white;
  border-color: #8B7541;
}

.filter-btn:active {
  background: #F5E6A3;
  transform: scale(0.95);
}

/* 自定义日期选择 */
.custom-date-section {
  margin-top: 15px;
}

.date-picker-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border: 1px solid rgba(139,117,65,0.3);
  border-radius: 10px;
  padding: 12px 15px;
}

.picker-icon {
  font-size: 16px;
  margin-right: 10px;
}

.picker-text {
  flex: 1;
  color: #5c5032;
  font-size: 14px;
}

.picker-arrow {
  font-size: 12px;
  color: rgba(92,80,50,0.6);
}

/* 统计信息 */
.stats-section {
  display: flex;
  gap: 15px;
  margin-bottom: 20px;
}

.stats-card {
  flex: 1;
  background: rgba(255,255,255,0.9);
  border-radius: 12px;
  padding: 15px;
  text-align: center;
  border: 1px solid rgba(139,117,65,0.2);
}

.stats-number {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #8B7541;
  margin-bottom: 5px;
}

.stats-label {
  font-size: 12px;
  color: rgba(92,80,50,0.7);
}

/* 批量操作 */
.batch-actions {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.batch-btn {
  flex: 1;
  background: #FFDD8F;
  color: #5c5032;
  padding: 12px;
  border-radius: 10px;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  border: 1px solid rgba(139,117,65,0.3);
}

.batch-btn.delete {
  background: #ff4444;
  color: white;
  border-color: #ff4444;
}

.batch-btn:active {
  transform: scale(0.95);
}

/* 进度列表区域 */
.progress-list-section {
  background: rgba(255,255,255,0.8);
  border-radius: 15px;
  padding: 20px;
  border: 1px solid rgba(139,117,65,0.2);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 50px 20px;
}

.empty-icon {
  display: block;
  font-size: 48px;
  margin-bottom: 15px;
}

.empty-text {
  color: rgba(92,80,50,0.6);
  font-size: 14px;
}

/* 进度列表 */
.progress-list {
  margin-top: 15px;
}

.progress-item {
  display: flex;
  align-items: flex-start;
  background: rgba(255,255,255,0.9);
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 15px;
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.progress-item.selected {
  border-color: #8B7541;
  background: rgba(139,117,65,0.1);
}

.progress-item:active {
  transform: scale(0.98);
}

/* 选择框 */
.select-checkbox {
  width: 24px;
  height: 24px;
  border: 2px solid #ddd;
  border-radius: 4px;
  margin-right: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 5px;
}

.select-checkbox.checked {
  background: #8B7541;
  border-color: #8B7541;
}

.check-icon {
  color: white;
  font-size: 14px;
  font-weight: bold;
}

/* 时间信息 */
.progress-time {
  display: flex;
  align-items: center;
  margin-right: 15px;
  min-width: 80px;
}

.time-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  margin-right: 8px;
  flex-shrink: 0;
}

.time-dot.completed {
  background: #4CAF50;
}

.time-dot.ongoing {
  background: #FF9800;
}

.time-dot.pending {
  background: #9E9E9E;
}

.time-info {
  display: flex;
  flex-direction: column;
}

.time-date {
  font-size: 12px;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.time-period {
  font-size: 10px;
  color: #666;
  line-height: 1.2;
}

/* 进度内容 */
.progress-content {
  flex: 1;
  margin-right: 15px;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
}

.progress-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 10px;
}

.progress-status {
  font-size: 10px;
  padding: 3px 6px;
  border-radius: 8px;
  font-weight: 500;
  white-space: nowrap;
}

.progress-status.completed {
  background: rgba(76,175,80,0.2);
  color: #4CAF50;
}

.progress-status.ongoing {
  background: rgba(255,152,0,0.2);
  color: #FF9800;
}

.progress-status.pending {
  background: rgba(158,158,158,0.2);
  color: #9E9E9E;
}

/* 详情信息 */
.progress-details {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.detail-item {
  display: flex;
  align-items: center;
  font-size: 12px;
}

.detail-icon {
  font-size: 12px;
  margin-right: 6px;
  width: 16px;
  text-align: center;
}

.detail-text {
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 单独删除按钮 */
.single-delete-btn {
  padding: 8px;
  border-radius: 50%;
  background: rgba(244,67,54,0.1);
  border: 1px solid rgba(244,67,54,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 36px;
  min-height: 36px;
  margin-top: 5px;
}

.single-delete-btn:active {
  background: rgba(244,67,54,0.2);
  transform: scale(0.9);
}

.delete-icon {
  font-size: 16px;
}
