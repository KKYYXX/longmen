<view class="app-container">
  <view class="texture-overlay"></view>
  <view class="light-spot spot-1"></view>
  <view class="light-spot spot-2"></view>
  
  <!-- 顶部标题区 -->
  <view class="header">
    <view class="icon-wrapper">
      <view class="icon-wrapper-inner">
        <text class="file-icon">📋</text>
      </view>
    </view>
    
    <view class="title-box">
      <text class="page-title">典型案例管理</text>
      <text class="subtitle">核心功能 · 简洁操作</text>
    </view>
  </view>
  
  <!-- 核心功能按钮区 -->
  <view class="btn-container">
    <!-- 查询按钮 -->
    <view class="function-card" bindtap="goToTypicalCasesQuery">
      <view class="card-content">
        <text class="card-title">案例查询</text>
        <text class="card-desc">快速检索所需典型案例</text>
      </view>
      <view class="icon-circle query-icon-circle">
        <text class="card-icon query-icon">🔍</text>
      </view>
    </view>
    
    <!-- 修改按钮 -->
    <view class="function-card" bindtap="goToTypicalCasesAlter">
      <view class="card-content">
        <text class="card-title">案例修改</text>
        <text class="card-desc">更新典型案例信息</text>
      </view>
      <view class="icon-circle edit-icon-circle">
        <text class="card-icon edit-icon">✏️</text>
      </view>
    </view>
  </view>
</view>
