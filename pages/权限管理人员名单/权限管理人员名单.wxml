<!--pages/权限管理人员名单/权限管理人员名单.wxml-->
<view class="container">
  <!-- 页面头部 -->
  <view class="header">
    <text class="title">权限管理人员名单</text>
  </view>

  <!-- 功能按钮区域 -->
  <view class="content">
    <button class="btn" bindtap="onProjectQuery">
      <text>项目查询</text>
    </button>

    <button class="btn" bindtap="onProjectModify">
      <text>项目修改</text>
    </button>

    <button class="btn" bindtap="onPolicyModify">
      <text>政策文件修改</text>
    </button>

    <button class="btn" bindtap="onCaseModify">
      <text>典型案例修改</text>
    </button>

    <button class="btn" bindtap="onProgressModify">
      <text>项目进度修改</text>
    </button>
  </view>
</view>