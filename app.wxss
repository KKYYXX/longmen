/**app.wxss**/

/* 全局样式重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: #333333;
  background: linear-gradient(135deg, #fffef8 0%, #fff5e6 100%);
}

/* 全局容器样式 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用按钮样式 */
button {
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
}

button::after {
  border: none;
}

/* 通用输入框样式 */
input {
  outline: none;
}

/* 清除浮动 */
.clearfix::after {
  content: "";
  display: table;
  clear: both;
}

/* 放大tabBar字体和图标 */
.weui-tabbar__label, .wx-tabbar__label, .tabbar-label {
  font-size: 42rpx !important;
  font-weight: bold;
  letter-spacing: 2rpx;
}

/* 放大tabBar图标 */
.weui-tabbar__icon, .wx-tabbar__icon, .tabbar-icon {
  font-size: 48rpx !important;
  line-height: 48rpx !important;
}

/* 杨枝甘露主题色按钮样式 */
.querybutton, .alterbuttton {
  background: linear-gradient(135deg, #f4e4c1 0%, #e8d5a8 100%);
  color: #8b6f47;
  border: 2rpx solid #d4c4a3;
  border-radius: 16rpx;
  padding: 0;
  font-size: 36rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(139, 111, 71, 0.25);
  transition: all 0.3s ease;
  min-width: 200rpx;
}

.querybutton:active, .alterbuttton:active {
  transform: translateY(3rpx);
  box-shadow: 0 3rpx 10rpx rgba(139, 111, 71, 0.35);
  background: linear-gradient(135deg, #e8d5a8 0%, #d4c4a3 100%);
}

.querybutton {
  background: linear-gradient(135deg, #f4e4c1 0%, #e8d5a8 100%);
}

.alterbuttton {
  background: linear-gradient(135deg, #e8d5a8 0%, #d4c4a3 100%);
}
