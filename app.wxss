/**app.wxss**/

/* 全局样式重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: #333333;
}

/* 全局容器样式 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用按钮样式 */
button {
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
}

button::after {
  border: none;
}

/* 通用输入框样式 */
input {
  outline: none;
}

/* 清除浮动 */
.clearfix::after {
  content: "";
  display: table;
  clear: both;
}
